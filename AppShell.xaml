<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppIT13.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:student="clr-namespace:MauiAppIT13.Pages.Student"
    xmlns:admin="clr-namespace:MauiAppIT13.Pages.Admin"
    xmlns:teacher="clr-namespace:MauiAppIT13.Pages.Teacher"
    Shell.FlyoutBehavior="Disabled"
    Title="StudentHub">

    <!-- Student Login -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate student:MainPage}"
        Route="MainPage" />

    <!-- Admin Login -->
    <ShellContent
        Title="Admin Login"
        ContentTemplate="{DataTemplate admin:AdminLoginPage}"
        Route="AdminLoginPage" />

    <!-- Admin Home -->
    <ShellContent
        Title="Admin Dashboard"
        ContentTemplate="{DataTemplate admin:AdminHomePage}"
        Route="AdminHomePage" />

    <!-- Admin Users -->
    <ShellContent
        Title="Admin Users"
        ContentTemplate="{DataTemplate admin:AdminUsersPage}"
        Route="AdminUsersPage" />

    <!-- Admin Tickets -->
    <ShellContent
        Title="Admin Tickets"
        ContentTemplate="{DataTemplate admin:AdminTicketsPage}"
        Route="AdminTicketsPage" />

    <!-- Admin Announcements -->
    <ShellContent
        Title="Admin Announcements"
        ContentTemplate="{DataTemplate admin:AdminAnnouncementsPage}"
        Route="AdminAnnouncementsPage" />

    <!-- Admin Reports -->
    <ShellContent
        Title="Admin Reports"
        ContentTemplate="{DataTemplate admin:AdminReportsPage}"
        Route="AdminReportsPage" />

    <!-- Teacher Login -->
    <ShellContent
        Title="Teacher Login"
        ContentTemplate="{DataTemplate teacher:TeacherLoginPage}"
        Route="TeacherLoginPage" />

    <!-- Teacher Home -->
    <ShellContent
        Title="Teacher Dashboard"
        ContentTemplate="{DataTemplate teacher:TeacherHomePage}"
        Route="TeacherHomePage" />

    <!-- Student Pages -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate student:HomePage}"
        Route="HomePage" />
    
    <ShellContent
        Title="Messages"
        ContentTemplate="{DataTemplate student:MessagesPage}"
        Route="MessagesPage" />
    
    <ShellContent
        Title="Announcements"
        ContentTemplate="{DataTemplate student:AnnouncementsPage}"
        Route="AnnouncementsPage" />
    
    <ShellContent
        Title="Tickets"
        ContentTemplate="{DataTemplate student:TicketsPage}"
        Route="TicketsPage" />
    
    <ShellContent
        Title="Profile"
        ContentTemplate="{DataTemplate student:ProfilePage}"
        Route="ProfilePage" />

</Shell>
