<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppIT13.Pages.Student.MainPage"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="0"
            VerticalOptions="Center"
            HorizontalOptions="Center">
            
            <!-- Login Card -->
            <Frame 
                BackgroundColor="White"
                CornerRadius="12"
                Padding="40,30"
                HasShadow="True"
                WidthRequest="400"
                MaximumWidthRequest="500">
                
                <VerticalStackLayout Spacing="20">
                    
                    <!-- Logo and Title -->
                    <VerticalStackLayout Spacing="5">
                        <Label 
                            Text="StudentHub"
                            FontSize="28"
                            FontAttributes="Bold"
                            TextColor="#2C3E50"
                            HorizontalOptions="Center"/>
                        <Label 
                            Text="Communication &amp; Engagement System"
                            FontSize="12"
                            TextColor="#7F8C8D"
                            HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                    <!-- Sign In / Sign Up Tabs -->
                    <Grid ColumnDefinitions="*,*" 
                          ColumnSpacing="0"
                          Margin="0,10,0,0">
                        <Border 
                            Grid.Column="0"
                            BackgroundColor="White"
                            Padding="15,10"
                            StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8,0,0,0"/>
                            </Border.StrokeShape>
                            <Label 
                                x:Name="SignInTab"
                                Text="Sign In"
                                FontSize="14"
                                FontAttributes="Bold"
                                TextColor="#2C3E50"
                                HorizontalOptions="Center"
                                VerticalOptions="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnSignInTabTapped"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </Border>
                        
                        <Border 
                            Grid.Column="1"
                            BackgroundColor="#F8F9FA"
                            Padding="15,10"
                            StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="0,8,0,0"/>
                            </Border.StrokeShape>
                            <Label 
                                x:Name="SignUpTab"
                                Text="Sign Up"
                                FontSize="14"
                                TextColor="#95A5A6"
                                HorizontalOptions="Center"
                                VerticalOptions="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnSignUpTabTapped"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </Border>
                    </Grid>

                    <!-- Email Input -->
                    <VerticalStackLayout Spacing="8">
                        <Label 
                            Text="Email"
                            FontSize="14"
                            TextColor="#2C3E50"
                            FontAttributes="Bold"/>
                        <Border
                            BackgroundColor="White"
                            Stroke="#E0E0E0"
                            StrokeThickness="1"
                            Padding="12,8">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6"/>
                            </Border.StrokeShape>
                            <Entry 
                                x:Name="EmailEntry"
                                Placeholder="email@gmail.com"
                                PlaceholderColor="#B0B0B0"
                                TextColor="#2C3E50"
                                Keyboard="Email"
                                BackgroundColor="Transparent"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Password Input -->
                    <VerticalStackLayout Spacing="8">
                        <Label 
                            Text="Password"
                            FontSize="14"
                            TextColor="#2C3E50"
                            FontAttributes="Bold"/>
                        <Border
                            BackgroundColor="White"
                            Stroke="#E0E0E0"
                            StrokeThickness="1"
                            Padding="12,8">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6"/>
                            </Border.StrokeShape>
                            <Entry 
                                x:Name="PasswordEntry"
                                Placeholder="••••••••"
                                PlaceholderColor="#B0B0B0"
                                TextColor="#2C3E50"
                                IsPassword="True"
                                BackgroundColor="Transparent"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Sign In Button -->
                    <Button 
                        x:Name="SignInBtn"
                        Text="Sign In"
                        BackgroundColor="#0891B2"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="6"
                        HeightRequest="48"
                        Margin="0,10,0,0"
                        Clicked="OnSignInClicked"/>

                    <!-- Role Selection Links -->
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="20" Margin="0,15,0,0">
                        <!-- Admin Login Link -->
                        <Label 
                            Text="Admin? Login here"
                            FontSize="13"
                            TextColor="#005BA5"
                            FontAttributes="Bold">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnAdminLoginTapped"/>
                            </Label.GestureRecognizers>
                        </Label>
                        
                        <!-- Separator -->
                        <Label Text="|" 
                               FontSize="13" 
                               TextColor="#B0B0B0"/>
                        
                        <!-- Teacher Login Link -->
                        <Label 
                            Text="Teacher? Login here"
                            FontSize="13"
                            TextColor="#059669"
                            FontAttributes="Bold">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnTeacherLoginTapped"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
