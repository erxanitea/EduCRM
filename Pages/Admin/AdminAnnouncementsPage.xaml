<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppIT13.Pages.Admin.AdminAnnouncementsPage"
             BackgroundColor="#F5F7FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                BackgroundColor="#005BA5"
                StrokeThickness="0">
            <Grid Padding="20,0" ColumnDefinitions="Auto,*,Auto">
                <!-- Logo -->
                <HorizontalStackLayout Grid.Column="0" Spacing="10" VerticalOptions="Center">
                    <Border BackgroundColor="White" 
                            WidthRequest="32" 
                            HeightRequest="32"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Label Text="A" 
                               TextColor="#005BA5" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    <Label Text="Admin Portal" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Grid>
        </Border>

        <!-- Left Sidebar -->
        <Border Grid.Row="1" Grid.Column="0" 
                BackgroundColor="White"
                StrokeThickness="0"
                Padding="10">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Top Menu Items -->
                <VerticalStackLayout Grid.Row="0" Spacing="5">
                    <!-- Dashboard Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ“Š" FontSize="18"/>
                            <Label Text="Dashboard" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnDashboardTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- User Management Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ‘¥" FontSize="18"/>
                            <Label Text="Users" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnUsersTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Announcements Menu Item (Active) -->
                    <Border BackgroundColor="#005BA5" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ“¢" FontSize="18"/>
                            <Label Text="Announcements" 
                                   TextColor="White" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Tickets Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸŽ«" FontSize="18"/>
                            <Label Text="Tickets" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnTicketsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Reports Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ“ˆ" FontSize="18"/>
                            <Label Text="Reports" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnReportsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Settings Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="âš™ï¸" FontSize="18"/>
                            <Label Text="Settings" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnSettingsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>

                <!-- Spacer -->
                <BoxView Grid.Row="1" Color="Transparent"/>

                <!-- Logout Button -->
                <Border Grid.Row="2"
                        BackgroundColor="Transparent" 
                        Padding="15,12"
                        StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8"/>
                    </Border.StrokeShape>
                    <HorizontalStackLayout Spacing="12">
                        <Label Text="ðŸšª" FontSize="18"/>
                        <Label Text="Logout" 
                               TextColor="#EF4444" 
                               FontSize="14"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLogoutTapped"/>
                    </Border.GestureRecognizers>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollView Grid.Row="1" Grid.Column="1" Padding="30">
            <VerticalStackLayout Spacing="20">
                
                <!-- Page Header -->
                <Grid ColumnDefinitions="*,Auto">
                    <VerticalStackLayout Grid.Column="0" Spacing="5">
                        <Label Text="Messaging &amp; Announcements" 
                               FontSize="24" 
                               FontAttributes="Bold"
                               TextColor="#2C3E50"/>
                        <Label Text="Send institution-wide messages to students and advisers" 
                               FontSize="13" 
                               TextColor="#6B7280"/>
                    </VerticalStackLayout>
                    
                    <Button Grid.Column="1"
                            Text="ðŸ“¢ New Announcement"
                            BackgroundColor="#005BA5"
                            TextColor="White"
                            FontSize="14"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            Padding="20,12"
                            VerticalOptions="Center"
                            Clicked="OnNewAnnouncementClicked"/>
                </Grid>

                <!-- Stats -->
                <Border BackgroundColor="White"
                        StrokeThickness="1"
                        Stroke="#E5E7EB"
                        Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="20">
                        <VerticalStackLayout>
                            <Label Text="Total Announcements"
                                   FontSize="13"
                                   TextColor="#6B7280"
                                   FontAttributes="Bold"/>
                            <Label x:Name="TotalAnnouncementsLabel"
                                   Text="0"
                                   FontSize="28"
                                   FontAttributes="Bold"
                                   TextColor="#111827"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Published"
                                   FontSize="13"
                                   TextColor="#6B7280"
                                   FontAttributes="Bold"/>
                            <Label x:Name="PublishedCountLabel"
                                   Text="0"
                                   FontSize="28"
                                   FontAttributes="Bold"
                                   TextColor="#059669"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="2">
                            <Label Text="Drafts"
                                   FontSize="13"
                                   TextColor="#6B7280"
                                   FontAttributes="Bold"/>
                            <Label x:Name="DraftCountLabel"
                                   Text="0"
                                   FontSize="28"
                                   FontAttributes="Bold"
                                   TextColor="#F97316"/>
                        </VerticalStackLayout>
                    </Grid>
                </Border>

                <!-- Search + Actions -->
                <Border BackgroundColor="White"
                        StrokeThickness="1"
                        Stroke="#E5E7EB"
                        Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="15">
                        <Entry x:Name="AnnouncementSearchEntry"
                               Placeholder="Search announcements..."
                               TextColor="#1F2937"
                               PlaceholderColor="#9CA3AF"
                               BackgroundColor="#F9FAFB"
                               TextChanged="OnSearchTextChanged"
                               HeightRequest="44"
                               Margin="0"/>
                        <Button Grid.Column="1"
                                Text="Refresh"
                                BackgroundColor="#F3F4F6"
                                TextColor="#1F2937"
                                FontAttributes="Bold"
                                Padding="18,10"
                                CornerRadius="8"
                                Clicked="OnRefreshAnnouncementsClicked"/>
                    </Grid>
                </Border>

                <!-- Announcements List -->
                <Border BackgroundColor="White"
                        StrokeThickness="1"
                        Stroke="#E5E7EB"
                        Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Announcements"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#2C3E50"/>

                        <CollectionView x:Name="AnnouncementsCollectionView"
                                        SelectionMode="None">
                            <CollectionView.EmptyView>
                                <Label Text="No announcements yet"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       TextColor="#6B7280"/>
                            </CollectionView.EmptyView>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border BackgroundColor="#F9FAFB"
                                            Padding="16"
                                            StrokeThickness="1"
                                            Stroke="#E5E7EB"
                                            Margin="0,0,0,12">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="10"/>
                                        </Border.StrokeShape>
                                        <VerticalStackLayout Spacing="10">
                                            <Grid ColumnDefinitions="*,Auto">
                                                <Label Text="{Binding Title}"
                                                       FontSize="16"
                                                       FontAttributes="Bold"
                                                       TextColor="#111827"
                                                       LineBreakMode="WordWrap"/>
                                                <Border Grid.Column="1"
                                                        BackgroundColor="#E5E7EB"
                                                        Padding="8,4"
                                                        StrokeThickness="0">
                                                    <Border.StrokeShape>
                                                        <RoundRectangle CornerRadius="12"/>
                                                    </Border.StrokeShape>
                                                    <Label Text="{Binding PublishedStatus}"
                                                           FontSize="12"
                                                           FontAttributes="Bold"
                                                           TextColor="#374151"/>
                                                </Border>
                                            </Grid>

                                            <Label Text="{Binding Content}"
                                                   FontSize="13"
                                                   TextColor="#4B5563"
                                                   LineBreakMode="WordWrap"/>

                                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                                                <HorizontalStackLayout Spacing="10"
                                                                       VerticalOptions="Center">
                                                    <Label Text="{Binding VisibilityLabel, StringFormat='To: {0}'}"
                                                           FontSize="12"
                                                           TextColor="#6B7280"/>
                                                    <Label Text="â€¢"
                                                           FontSize="12"
                                                           TextColor="#9CA3AF"/>
                                                    <Label Text="{Binding CreatedAt, StringFormat='{}{0:MMM d, h:mm tt}'}"
                                                           FontSize="12"
                                                           TextColor="#6B7280"/>
                                                    <Label Text="â€¢"
                                                           FontSize="12"
                                                           TextColor="#9CA3AF"/>
                                                    <Label Text="{Binding ViewCount, StringFormat='ðŸ“ˆ {0} views'}"
                                                           FontSize="12"
                                                           TextColor="#6B7280"/>
                                                </HorizontalStackLayout>

                                                <HorizontalStackLayout Grid.Column="1" Spacing="10" HorizontalOptions="End">
                                                    <Button Text="Edit"
                                                            Padding="14,6"
                                                            FontSize="12"
                                                            BackgroundColor="#005BA5"
                                                            TextColor="White"
                                                            CornerRadius="6"
                                                            CommandParameter="{Binding .}"
                                                            Clicked="OnEditAnnouncementClicked"/>
                                                    <Button Text="Delete"
                                                            Padding="14,6"
                                                            FontSize="12"
                                                            BackgroundColor="#F87171"
                                                            TextColor="White"
                                                            CornerRadius="6"
                                                            CommandParameter="{Binding .}"
                                                            Clicked="OnDeleteAnnouncementClicked"/>
                                                </HorizontalStackLayout>
                                            </Grid>
                                        </VerticalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Announcement Modal -->
        <Border x:Name="AnnouncementModal"
                Grid.RowSpan="2"
                Grid.ColumnSpan="2"
                BackgroundColor="#80000000"
                IsVisible="False">
            <Border BackgroundColor="White"
                    WidthRequest="600"
                    Padding="30"
                    StrokeThickness="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.25" Radius="25" Offset="0,12"/>
                </Border.Shadow>

                <Grid RowDefinitions="Auto,Auto,*,Auto" RowSpacing="20">
                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto" VerticalOptions="Center">
                        <Label x:Name="ModalTitleLabel"
                               Text="New Announcement"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="#111827"/>
                        <Button Grid.Column="1"
                                Text="âœ•"
                                WidthRequest="40"
                                HeightRequest="40"
                                BackgroundColor="#F3F4F6"
                                TextColor="#6B7280"
                                Clicked="OnCloseModalClicked"/>
                    </Grid>

                    <VerticalStackLayout Grid.Row="1" Spacing="12">
                        <VerticalStackLayout Spacing="6">
                            <Label Text="Title" FontAttributes="Bold" FontSize="14" TextColor="#374151"/>
                            <Entry x:Name="AnnouncementTitleEntry"
                                   Placeholder="Announcement title"
                                   BackgroundColor="#F9FAFB"
                                   TextColor="#111827"
                                   PlaceholderColor="#9CA3AF"
                                   HeightRequest="44"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="6">
                            <Label Text="Visibility" FontAttributes="Bold" FontSize="14" TextColor="#374151"/>
                            <Picker x:Name="VisibilityPicker"
                                    Title="Select audience"
                                    SelectedIndex="0"
                                    BackgroundColor="#F9FAFB"
                                    TextColor="#111827">
                                <Picker.Items>
                                    <x:String>All Users</x:String>
                                    <x:String>Students Only</x:String>
                                    <x:String>Advisers Only</x:String>
                                </Picker.Items>
                            </Picker>
                        </VerticalStackLayout>

                        <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">
                            <Label Text="Published"
                                   FontAttributes="Bold"
                                   FontSize="14"
                                   TextColor="#374151"
                                   VerticalOptions="Center"/>
                            <Switch Grid.Column="1"
                                    x:Name="PublishedSwitch"
                                    IsToggled="True"
                                    HorizontalOptions="End"/>
                        </Grid>
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Row="2" Spacing="6">
                        <Label Text="Content" FontAttributes="Bold" FontSize="14" TextColor="#374151"/>
                        <Editor x:Name="AnnouncementContentEditor"
                                Placeholder="Write the announcement details here..."
                                AutoSize="TextChanges"
                                HeightRequest="180"
                                BackgroundColor="#F9FAFB"
                                TextColor="#111827"
                                PlaceholderColor="#9CA3AF"/>
                    </VerticalStackLayout>

                    <Grid Grid.Row="3" ColumnDefinitions="*,Auto" ColumnSpacing="15">
                        <Button Text="Cancel"
                                BackgroundColor="#F3F4F6"
                                TextColor="#6B7280"
                                FontAttributes="Bold"
                                Padding="20,12"
                                CornerRadius="8"
                                Clicked="OnCancelAnnouncementClicked"/>
                        <Button Grid.Column="1"
                                x:Name="SaveAnnouncementButton"
                                Text="Save"
                                BackgroundColor="#005BA5"
                                TextColor="White"
                                FontAttributes="Bold"
                                Padding="20,12"
                                CornerRadius="8"
                                Clicked="OnSaveAnnouncementClicked"/>
                    </Grid>
                </Grid>
            </Border>
        </Border>

    </Grid>
</ContentPage>
