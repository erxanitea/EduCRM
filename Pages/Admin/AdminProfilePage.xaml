<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppIT13.Pages.Admin.AdminProfilePage"
             BackgroundColor="#F5F7FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                BackgroundColor="#005BA5"
                StrokeThickness="0">
            <Grid Padding="20,0" ColumnDefinitions="Auto,*,Auto">
                <!-- Logo -->
                <HorizontalStackLayout Grid.Column="0" Spacing="10" VerticalOptions="Center">
                    <Border BackgroundColor="White" 
                            WidthRequest="32" 
                            HeightRequest="32"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Label Text="A" 
                               TextColor="#005BA5" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    <Label Text="Admin Portal" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Grid>
        </Border>

        <!-- Left Sidebar -->
        <Border Grid.Row="1" Grid.Column="0" 
                BackgroundColor="White"
                StrokeThickness="0"
                Padding="10">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Top Menu Items -->
                <VerticalStackLayout Grid.Row="0" Spacing="5">
                    <!-- Dashboard -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ“Š" FontSize="18"/>
                            <Label Text="Dashboard" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnDashboardTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Users -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ‘¥" FontSize="18"/>
                            <Label Text="Users" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnUsersTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Announcements -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ“¢" FontSize="18"/>
                            <Label Text="Announcements" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAnnouncementsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Tickets -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸŽ«" FontSize="18"/>
                            <Label Text="Tickets" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnTicketsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Reports -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ“ˆ" FontSize="18"/>
                            <Label Text="Reports" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnReportsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>

                <!-- Bottom Menu Items -->
                <VerticalStackLayout Grid.Row="2" Spacing="5">
                    <!-- Administrator Profile (Active) -->
                    <Border BackgroundColor="#005BA5" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ‘¤" FontSize="18"/>
                            <Label Text="Administrator" 
                                   TextColor="White" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Logout -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸšª" FontSize="18"/>
                            <Label Text="Logout" 
                                   TextColor="#EF4444" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLogoutTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollView Grid.Row="1" Grid.Column="1" Padding="30">
            <VerticalStackLayout Spacing="25">
                
                <!-- Page Header with Edit Button -->
                <Grid ColumnDefinitions="*,Auto">
                    <Label Grid.Column="0"
                           Text="Administrator Profile" 
                           FontSize="24" 
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           VerticalOptions="Center"/>
                    <Button Grid.Column="1"
                            Text="âœ Edit Profile"
                            BackgroundColor="#005BA5"
                            TextColor="White"
                            FontSize="14"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            Padding="20,12"
                            VerticalOptions="Center"
                            Clicked="OnEditProfileClicked"/>
                </Grid>

                <!-- Profile Card -->
                <Border BackgroundColor="White"
                        StrokeThickness="1"
                        Stroke="#E5E7EB"
                        Padding="30">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="25">
                        
                        <!-- Profile Avatar -->
                        <Border Grid.Column="0"
                                BackgroundColor="#005BA5"
                                WidthRequest="120"
                                HeightRequest="120"
                                StrokeThickness="0"
                                VerticalOptions="Start">
                            <Border.StrokeShape>
                                <Ellipse/>
                            </Border.StrokeShape>
                            <Label x:Name="AvatarLabel"
                                   Text="AD" 
                                   TextColor="White"
                                   FontSize="48"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <!-- Profile Info -->
                        <VerticalStackLayout Grid.Column="1" Spacing="12">
                            <Label x:Name="NameLabel"
                                   Text="Administrator Name" 
                                   FontSize="28" 
                                   FontAttributes="Bold"
                                   TextColor="#2C3E50"/>
                            <Label x:Name="RoleLabel"
                                   Text="System Administrator" 
                                   FontSize="16" 
                                   TextColor="#6B7280"/>
                            
                            <!-- Badges -->
                            <HorizontalStackLayout Spacing="10" Margin="0,5,0,0">
                                <Border BackgroundColor="#DBEAFE"
                                        Padding="10,6"
                                        StrokeThickness="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12"/>
                                    </Border.StrokeShape>
                                    <Label Text="Administrator" 
                                           TextColor="#005BA5"
                                           FontSize="12"
                                           FontAttributes="Bold"/>
                                </Border>
                                
                                <Border BackgroundColor="#FEE2E2"
                                        Padding="10,6"
                                        StrokeThickness="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12"/>
                                    </Border.StrokeShape>
                                    <Label Text="Full Access" 
                                           TextColor="#DC2626"
                                           FontSize="12"
                                           FontAttributes="Bold"/>
                                </Border>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Grid>
                </Border>

                <!-- Contact Information Card -->
                <Border BackgroundColor="White"
                        StrokeThickness="1"
                        Stroke="#E5E7EB"
                        Padding="25">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    
                    <VerticalStackLayout Spacing="20">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Contact Information" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   TextColor="#2C3E50"/>
                            <Label Text="Your contact details and location" 
                                   FontSize="13" 
                                   TextColor="#6B7280"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="15">
                            <!-- Email -->
                            <HorizontalStackLayout Spacing="15">
                                <Border BackgroundColor="#DBEAFE"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        StrokeThickness="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8"/>
                                    </Border.StrokeShape>
                                    <Label Text="ðŸ“§" 
                                           FontSize="20"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                                    <Label Text="Email" 
                                           FontSize="12" 
                                           TextColor="#6B7280"/>
                                    <Label x:Name="EmailLabel"
                                           Text="admin@university.edu" 
                                           FontSize="14" 
                                           TextColor="#2C3E50"
                                           FontAttributes="Bold"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>

                            <!-- Phone -->
                            <HorizontalStackLayout Spacing="15">
                                <Border BackgroundColor="#DBEAFE"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        StrokeThickness="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8"/>
                                    </Border.StrokeShape>
                                    <Label Text="ðŸ“±" 
                                           FontSize="20"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                                    <Label Text="Phone" 
                                           FontSize="12" 
                                           TextColor="#6B7280"/>
                                    <Label x:Name="PhoneLabel"
                                           Text="+1 (555) 000-0000" 
                                           FontSize="14" 
                                           TextColor="#2C3E50"
                                           FontAttributes="Bold"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>

                            <!-- Office Location -->
                            <HorizontalStackLayout Spacing="15">
                                <Border BackgroundColor="#DBEAFE"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        StrokeThickness="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8"/>
                                    </Border.StrokeShape>
                                    <Label Text="ðŸ¢" 
                                           FontSize="20"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                                    <Label Text="Office Location" 
                                           FontSize="12" 
                                           TextColor="#6B7280"/>
                                    <Label x:Name="OfficeLabel"
                                           Text="Administration Building, Room 101" 
                                           FontSize="14" 
                                           TextColor="#2C3E50"
                                           FontAttributes="Bold"
                                           LineBreakMode="WordWrap"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- System Information Card -->
                <Border BackgroundColor="White"
                        StrokeThickness="1"
                        Stroke="#E5E7EB"
                        Padding="25">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    
                    <VerticalStackLayout Spacing="18">
                        <HorizontalStackLayout Spacing="8">
                            <Label Text="âš™ï¸" FontSize="18"/>
                            <Label Text="System Information" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   TextColor="#2C3E50"/>
                        </HorizontalStackLayout>

                        <VerticalStackLayout Spacing="12">
                            <!-- Employee ID -->
                            <VerticalStackLayout Spacing="4">
                                <Label Text="Employee ID" 
                                       FontSize="12" 
                                       TextColor="#6B7280"/>
                                <Label x:Name="EmployeeIdLabel"
                                       Text="ADM-2019-0001" 
                                       FontSize="14" 
                                       TextColor="#2C3E50"
                                       FontAttributes="Bold"/>
                            </VerticalStackLayout>

                            <!-- Role -->
                            <VerticalStackLayout Spacing="4">
                                <Label Text="Role" 
                                       FontSize="12" 
                                       TextColor="#6B7280"/>
                                <Label x:Name="RoleDetailLabel"
                                       Text="System Administrator" 
                                       FontSize="14" 
                                       TextColor="#2C3E50"
                                       FontAttributes="Bold"/>
                            </VerticalStackLayout>

                            <!-- Access Level -->
                            <VerticalStackLayout Spacing="4">
                                <Label Text="Access Level" 
                                       FontSize="12" 
                                       TextColor="#6B7280"/>
                                <Label x:Name="AccessLevelLabel"
                                       Text="Full System Access" 
                                       FontSize="14" 
                                       TextColor="#DC2626"
                                       FontAttributes="Bold"/>
                            </VerticalStackLayout>

                            <!-- Department -->
                            <VerticalStackLayout Spacing="4">
                                <Label Text="Department" 
                                       FontSize="12" 
                                       TextColor="#6B7280"/>
                                <Label x:Name="DepartmentLabel"
                                       Text="Information Technology" 
                                       FontSize="14" 
                                       TextColor="#2C3E50"
                                       FontAttributes="Bold"/>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Edit Profile Modal Overlay -->
        <Border x:Name="EditProfileModal"
                Grid.RowSpan="2"
                Grid.ColumnSpan="2"
                BackgroundColor="#80000000"
                IsVisible="False"
                Padding="0">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnEditProfileModalBackgroundTapped"/>
            </Border.GestureRecognizers>

            <Border BackgroundColor="White"
                    WidthRequest="420"
                    Padding="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="14"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.25" Radius="25" Offset="0,12"/>
                </Border.Shadow>

                <VerticalStackLayout Spacing="0">
                    <Border BackgroundColor="#005BA5" Padding="25,20" StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="14,14,0,0"/>
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="*,Auto">
                            <VerticalStackLayout Grid.Column="0" Spacing="4">
                                <Label Text="Edit Profile" 
                                       FontSize="18" 
                                       FontAttributes="Bold"
                                       TextColor="White"/>
                                <Label Text="Update your information" 
                                       FontSize="12" 
                                       TextColor="#DBEAFE"/>
                            </VerticalStackLayout>
                            <Label Grid.Column="1"
                                   Text="âœ•"
                                   FontSize="24"
                                   TextColor="White"
                                   VerticalOptions="Start"
                                   Margin="0,-3,0,0">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnCloseEditProfileModalTapped"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </Grid>
                    </Border>

                    <VerticalStackLayout Spacing="14" Padding="25,20">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Phone Number" 
                                   FontSize="13" 
                                   TextColor="#2C3E50"
                                   FontAttributes="Bold"/>
                            <Border BackgroundColor="#F9FAFB"
                                    Stroke="#E5E7EB"
                                    StrokeThickness="1"
                                    Padding="12,10">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Entry x:Name="EditPhoneEntry"
                                       Placeholder="+1 (555) 000-0000"
                                       PlaceholderColor="#9CA3AF"
                                       TextColor="#2C3E50"
                                       BackgroundColor="Transparent"
                                       FontSize="13"/>
                            </Border>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Office Location" 
                                   FontSize="13" 
                                   TextColor="#2C3E50"
                                   FontAttributes="Bold"/>
                            <Border BackgroundColor="#F9FAFB"
                                    Stroke="#E5E7EB"
                                    StrokeThickness="1"
                                    Padding="12,10">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Entry x:Name="EditOfficeEntry"
                                       Placeholder="Administration Building, Room 101"
                                       PlaceholderColor="#9CA3AF"
                                       TextColor="#2C3E50"
                                       BackgroundColor="Transparent"
                                       FontSize="13"/>
                            </Border>
                        </VerticalStackLayout>

                        <HorizontalStackLayout Spacing="12" Padding="0,8,0,0">
                            <Button Text="Cancel"
                                    Clicked="OnCancelEditProfileClicked"
                                    BackgroundColor="#F3F4F6"
                                    TextColor="#2C3E50"
                                    Padding="12,10"
                                    CornerRadius="8"
                                    FontSize="13"
                                    HorizontalOptions="FillAndExpand"/>
                            
                            <Button Text="Save"
                                    Clicked="OnSaveEditProfileClicked"
                                    BackgroundColor="#005BA5"
                                    TextColor="White"
                                    Padding="12,10"
                                    CornerRadius="8"
                                    FontSize="13"
                                    HorizontalOptions="FillAndExpand"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>
        </Border>
    </Grid>
</ContentPage>
