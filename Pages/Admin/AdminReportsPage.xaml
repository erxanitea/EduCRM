<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppIT13.Pages.Admin.AdminReportsPage"
             BackgroundColor="#F5F7FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                BackgroundColor="#005BA5"
                StrokeThickness="0">
            <Grid Padding="20,0" ColumnDefinitions="Auto,*,Auto">
                <!-- Logo -->
                <HorizontalStackLayout Grid.Column="0" Spacing="10" VerticalOptions="Center">
                    <Border BackgroundColor="White" 
                            WidthRequest="32" 
                            HeightRequest="32"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Label Text="A" 
                               TextColor="#005BA5" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    <Label Text="Admin Portal" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Grid>
        </Border>

        <!-- Left Sidebar -->
        <Border Grid.Row="1" Grid.Column="0" 
                BackgroundColor="White"
                StrokeThickness="0"
                Padding="10">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Top Menu Items -->
                <VerticalStackLayout Grid.Row="0" Spacing="5">
                    <!-- Dashboard Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="üìä" FontSize="18"/>
                            <Label Text="Dashboard" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnDashboardTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- User Management Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="üë•" FontSize="18"/>
                            <Label Text="Users" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnUsersTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Announcements Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="üì¢" FontSize="18"/>
                            <Label Text="Announcements" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAnnouncementsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Tickets Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="üé´" FontSize="18"/>
                            <Label Text="Tickets" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnTicketsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Reports Menu Item (Active) -->
                    <Border BackgroundColor="#005BA5" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="üìà" FontSize="18"/>
                            <Label Text="Reports" 
                                   TextColor="White" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Settings Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="‚öôÔ∏è" FontSize="18"/>
                            <Label Text="Settings" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnSettingsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>

                <!-- Spacer -->
                <BoxView Grid.Row="1" Color="Transparent"/>

                <!-- Administrator Profile (Above Logout) -->
                <VerticalStackLayout Grid.Row="2" Spacing="5">
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="üîí" FontSize="18"/>
                            <Label Text="Administrator" 
                                   TextColor="#2C3E50" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Logout Button -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="üö™" FontSize="18"/>
                            <Label Text="Logout" 
                                   TextColor="#EF4444" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLogoutTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollView Grid.Row="1" Grid.Column="1" Padding="30">
            <VerticalStackLayout Spacing="25">
                
                <!-- Page Header -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Reports &amp; Analytics" 
                           FontSize="28" 
                           FontAttributes="Bold"
                           TextColor="#1F2937"/>
                    <Label Text="Generate comprehensive system reports" 
                           FontSize="14" 
                           TextColor="#6B7280"/>
                </VerticalStackLayout>

                <!-- Statistics Cards -->
                <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="20">
                    <!-- Total Tickets -->
                    <Border Grid.Column="0"
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Total Tickets" 
                                   FontSize="13" 
                                   TextColor="#6B7280"/>
                            <Label Text="1,234" 
                                   FontSize="28" 
                                   FontAttributes="Bold"
                                   TextColor="#005BA5"/>
                            <Label Text="+12% from previous period" 
                                   FontSize="11" 
                                   TextColor="#10B981"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Avg Response Time -->
                    <Border Grid.Column="1"
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Avg Response Time" 
                                   FontSize="13" 
                                   TextColor="#6B7280"/>
                            <Label Text="2.4 hrs" 
                                   FontSize="28" 
                                   FontAttributes="Bold"
                                   TextColor="#005BA5"/>
                            <Label Text="-8% from previous period" 
                                   FontSize="11" 
                                   TextColor="#10B981"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Resolution Rate -->
                    <Border Grid.Column="2"
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Resolution Rate" 
                                   FontSize="13" 
                                   TextColor="#6B7280"/>
                            <Label Text="94%" 
                                   FontSize="28" 
                                   FontAttributes="Bold"
                                   TextColor="#005BA5"/>
                            <Label Text="+2% from previous period" 
                                   FontSize="11" 
                                   TextColor="#10B981"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Active Users -->
                    <Border Grid.Column="3"
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Active Users" 
                                   FontSize="13" 
                                   TextColor="#6B7280"/>
                            <Label Text="856" 
                                   FontSize="28" 
                                   FontAttributes="Bold"
                                   TextColor="#005BA5"/>
                            <Label Text="+5% from previous period" 
                                   FontSize="11" 
                                   TextColor="#10B981"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- Generate Report Section -->
                <Border BackgroundColor="White"
                        StrokeThickness="1"
                        Stroke="#E5E7EB"
                        Padding="25">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Grid ColumnDefinitions="*,280" ColumnSpacing="30">
                        <!-- Left Side - Form -->
                        <VerticalStackLayout Grid.Column="0" Spacing="18">
                            <Label Text="Generate Report" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   TextColor="#1F2937"/>

                            <!-- Report Type Picker -->
                            <VerticalStackLayout Spacing="8">
                                <Label Text="Report Type" 
                                       FontSize="13" 
                                       TextColor="#374151"
                                       FontAttributes="Bold"/>
                                <Border BackgroundColor="White"
                                        Stroke="#D1D5DB"
                                        StrokeThickness="1"
                                        Padding="12,10">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="6"/>
                                    </Border.StrokeShape>
                                    <Picker x:Name="ReportTypePicker"
                                            TextColor="#1F2937"
                                            BackgroundColor="Transparent"
                                            FontSize="14">
                                        <Picker.Items>
                                            <x:String>üìä Ticket Summary</x:String>
                                            <x:String>üìö Student Activity</x:String>
                                            <x:String>üë®‚Äçüè´ Adviser Performance</x:String>
                                            <x:String>üí¨ Communication Analytics</x:String>
                                        </Picker.Items>
                                        <Picker.SelectedIndex>0</Picker.SelectedIndex>
                                    </Picker>
                                </Border>
                            </VerticalStackLayout>

                            <!-- Date Range -->
                            <Label Text="Date Range" 
                                   FontSize="13" 
                                   TextColor="#374151"
                                   FontAttributes="Bold"/>
                            <Border BackgroundColor="White"
                                    Stroke="#D1D5DB"
                                    StrokeThickness="1"
                                    Padding="12,10">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6"/>
                                </Border.StrokeShape>
                                <Picker TextColor="#1F2937"
                                        BackgroundColor="Transparent"
                                        FontSize="14"
                                        SelectedIndex="1">
                                    <Picker.Items>
                                        <x:String>Last 7 Days</x:String>
                                        <x:String>Last 30 Days</x:String>
                                        <x:String>Last 90 Days</x:String>
                                        <x:String>Custom Range</x:String>
                                    </Picker.Items>
                                </Picker>
                            </Border>

                            <!-- Generate Button -->
                            <Button Text="üì• Generate Report"
                                    BackgroundColor="#005BA5"
                                    TextColor="White"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    CornerRadius="6"
                                    HeightRequest="44"
                                    Margin="0,8,0,0"
                                    Clicked="OnGenerateReportClicked"/>
                        </VerticalStackLayout>

                        <!-- Right Side - Report Preview -->
                        <Border Grid.Column="1"
                                BackgroundColor="#F9FAFB"
                                StrokeThickness="1"
                                Stroke="#E5E7EB"
                                Padding="20">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <VerticalStackLayout Spacing="12">
                                <Label Text="Report Preview" 
                                       FontSize="14" 
                                       FontAttributes="Bold"
                                       TextColor="#374151"/>
                                
                                <VerticalStackLayout Spacing="6">
                                    <Label Text="Period:" 
                                           FontSize="12" 
                                           TextColor="#6B7280"/>
                                    <Label Text="Last 30 Days" 
                                           FontSize="13" 
                                           FontAttributes="Bold"
                                           TextColor="#1F2937"/>
                                </VerticalStackLayout>

                                <VerticalStackLayout Spacing="6">
                                    <Label Text="Generated:" 
                                           FontSize="12" 
                                           TextColor="#6B7280"/>
                                    <Label Text="Not yet generated" 
                                           FontSize="13" 
                                           FontAttributes="Bold"
                                           TextColor="#1F2937"/>
                                </VerticalStackLayout>

                                <BoxView HeightRequest="1" 
                                         BackgroundColor="#E5E7EB" 
                                         Margin="0,8"/>

                                <Label Text="Export Options" 
                                       FontSize="13" 
                                       FontAttributes="Bold"
                                       TextColor="#374151"/>

                                <HorizontalStackLayout Spacing="10">
                                    <Button Text="üìÑ PDF"
                                            BackgroundColor="White"
                                            TextColor="#005BA5"
                                            FontSize="12"
                                            Padding="16,8"
                                            CornerRadius="6"
                                            BorderColor="#D1D5DB"
                                            BorderWidth="1"
                                            Clicked="OnExportPdfClicked"/>
                                    <Button Text="üìä CSV"
                                            BackgroundColor="White"
                                            TextColor="#005BA5"
                                            FontSize="12"
                                            Padding="16,8"
                                            CornerRadius="6"
                                            BorderColor="#D1D5DB"
                                            BorderWidth="1"
                                            Clicked="OnExportCsvClicked"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Border>
                    </Grid>
                </Border>

                <!-- Key Insights -->
                <VerticalStackLayout Spacing="15">
                    <Label Text="Key Insights" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#1F2937"/>

                    <!-- Improved Response Times -->
                    <Border BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="18">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="üìà" 
                                   FontSize="24"
                                   VerticalOptions="Start"/>
                            <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                                <Label Text="Improved Response Times" 
                                       FontSize="15" 
                                       FontAttributes="Bold"
                                       TextColor="#1F2937"/>
                                <Label Text="Average ticket response time decreased by 8% this month." 
                                       FontSize="13" 
                                       TextColor="#6B7280"
                                       LineBreakMode="WordWrap"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- User Engagement -->
                    <Border BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="18">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="üë•" 
                                   FontSize="24"
                                   VerticalOptions="Start"/>
                            <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                                <Label Text="User Engagement" 
                                       FontSize="15" 
                                       FontAttributes="Bold"
                                       TextColor="#1F2937"/>
                                <Label Text="Student activity increased by 18% compared to last period." 
                                       FontSize="13" 
                                       TextColor="#6B7280"
                                       LineBreakMode="WordWrap"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Communication Volume -->
                    <Border BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="18">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="üí¨" 
                                   FontSize="24"
                                   VerticalOptions="Start"/>
                            <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                                <Label Text="Communication Volume" 
                                       FontSize="15" 
                                       FontAttributes="Bold"
                                       TextColor="#1F2937"/>
                                <Label Text="86 messages sent through the platform this week." 
                                       FontSize="13" 
                                       TextColor="#6B7280"
                                       LineBreakMode="WordWrap"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Border>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>
