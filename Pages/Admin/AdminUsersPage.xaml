<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiAppIT13.Utils"
             xmlns:models="clr-namespace:MauiAppIT13.Models"
             x:Class="MauiAppIT13.Pages.Admin.AdminUsersPage"
             BackgroundColor="#F5F7FA">
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:RoleColorConverter x:Key="RoleColorConverter"/>
            <local:RoleTextColorConverter x:Key="RoleTextColorConverter"/>
            <local:StatusColorConverter x:Key="StatusColorConverter"/>
            <local:StatusTextConverter x:Key="StatusTextConverter"/>
            <local:StatusTextColorConverter x:Key="StatusTextColorConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                BackgroundColor="#005BA5"
                StrokeThickness="0">
            <Grid Padding="20,0" ColumnDefinitions="Auto,*,Auto">
                <!-- Logo -->
                <HorizontalStackLayout Grid.Column="0" Spacing="10" VerticalOptions="Center">
                    <Border BackgroundColor="White" 
                            WidthRequest="32" 
                            HeightRequest="32"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Label Text="A" 
                               TextColor="#005BA5" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    <Label Text="Admin Portal" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Grid>
        </Border>

        <!-- Left Sidebar -->
        <Border Grid.Row="1" Grid.Column="0" 
                BackgroundColor="White"
                StrokeThickness="0"
                Padding="10">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Top Menu Items -->
                <VerticalStackLayout Grid.Row="0" Spacing="5">
                    <!-- Dashboard Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ğŸ“Š" FontSize="18"/>
                            <Label Text="Dashboard" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnDashboardTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- User Management Menu Item (Active) -->
                    <Border BackgroundColor="#005BA5" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ğŸ‘¥" FontSize="18"/>
                            <Label Text="Users" 
                                   TextColor="White" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Announcements Management Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ğŸ“¢" FontSize="18"/>
                            <Label Text="Announcements" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAnnouncementsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Tickets Management Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ğŸ«" FontSize="18"/>
                            <Label Text="Tickets" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnTicketsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Reports Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ğŸ“ˆ" FontSize="18"/>
                            <Label Text="Reports" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnReportsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>


                </VerticalStackLayout>

                <!-- Spacer to push logout to bottom -->
                <BoxView Grid.Row="1" Color="Transparent"/>

                <!-- Administrator Profile (Above Logout) -->
                <VerticalStackLayout Grid.Row="2" Spacing="5">
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ğŸ”’" FontSize="18"/>
                            <Label Text="Administrator" 
                                   TextColor="#2C3E50" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Logout Button at Bottom -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ğŸšª" FontSize="18"/>
                            <Label Text="Logout" 
                                   TextColor="#EF4444" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLogoutTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollView Grid.Row="1" Grid.Column="1" Padding="20">
            <VerticalStackLayout Spacing="20">
                
                <!-- Page Header -->
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="15">
                    <VerticalStackLayout Grid.Column="0" Spacing="5">
                        <Label Text="User Management" 
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="#1F2937"/>
                        <Label Text="Manage students, advisors, and administrators" 
                               FontSize="14" 
                               TextColor="#6B7280"/>
                    </VerticalStackLayout>
                    
                    <Button Grid.Column="1"
                            Text="â• Add User"
                            BackgroundColor="#005BA5"
                            TextColor="White"
                            FontSize="14"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            Padding="20,12"
                            VerticalOptions="Center"
                            Clicked="OnAddUserClicked"/>
                </Grid>

                <!-- User Table -->
                <Border BackgroundColor="White"
                        StrokeThickness="1"
                        Stroke="#E5E7EB"
                        Padding="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    
                    <VerticalStackLayout Spacing="0">
                        <!-- Search Bar -->
                        <Border BackgroundColor="White"
                                Padding="20"
                                StrokeThickness="0">
                            <Border BackgroundColor="#F9FAFB"
                                    Stroke="#E5E7EB"
                                    StrokeThickness="1"
                                    Padding="12,8">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                    <Label Grid.Column="0" 
                                           Text="ğŸ”" 
                                           FontSize="16"
                                           VerticalOptions="Center"/>
                                    <Entry Grid.Column="1"
                                           x:Name="SearchEntry"
                                           Placeholder="Search by name or email..."
                                           PlaceholderColor="#9CA3AF"
                                           TextColor="#1F2937"
                                           BackgroundColor="Transparent"
                                           VerticalOptions="Center"
                                           TextChanged="OnSearchTextChanged"/>
                                </Grid>
                            </Border>
                        </Border>

                        <!-- Table Header -->
                        <Grid BackgroundColor="#F9FAFB" 
                              Padding="20,12"
                              ColumnDefinitions="2*,2*,1.2*,1*,1.2*">
                            <Label Grid.Column="0" 
                                   Text="Name" 
                                   FontSize="13" 
                                   FontAttributes="Bold"
                                   TextColor="#374151"/>
                            <Label Grid.Column="1" 
                                   Text="Email" 
                                   FontSize="13" 
                                   FontAttributes="Bold"
                                   TextColor="#374151"/>
                            <Label Grid.Column="2" 
                                   Text="Role" 
                                   FontSize="13" 
                                   FontAttributes="Bold"
                                   TextColor="#374151"/>
                            <Label Grid.Column="3" 
                                   Text="Status" 
                                   FontSize="13" 
                                   FontAttributes="Bold"
                                   TextColor="#374151"/>
                            <Label Grid.Column="4" 
                                   Text="Actions" 
                                   FontSize="13" 
                                   FontAttributes="Bold"
                                   TextColor="#374151"/>
                        </Grid>

                        <!-- Divider -->
                        <BoxView HeightRequest="1" BackgroundColor="#E5E7EB"/>

                        <!-- Users Collection View -->
                        <CollectionView x:Name="UsersCollectionView"
                                        SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:User">
                                    <VerticalStackLayout Spacing="0">
                                        <Grid Padding="20,16"
                                              ColumnDefinitions="2*,2*,1.2*,1*,1.2*"
                                              BackgroundColor="White">
                                            <Label Grid.Column="0" 
                                                   Text="{Binding DisplayName}" 
                                                   FontSize="14" 
                                                   TextColor="#1F2937"
                                                   VerticalOptions="Center"/>
                                            <Label Grid.Column="1" 
                                                   Text="{Binding Email}" 
                                                   FontSize="14" 
                                                   TextColor="#6B7280"
                                                   VerticalOptions="Center"/>
                                            <Border Grid.Column="2"
                                                    BackgroundColor="{Binding Role, Converter={StaticResource RoleColorConverter}}"
                                                    Padding="8,4"
                                                    WidthRequest="80"
                                                    StrokeThickness="0"
                                                    VerticalOptions="Center"
                                                    HorizontalOptions="Start">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="6"/>
                                                </Border.StrokeShape>
                                                <Label Text="{Binding Role}" 
                                                       FontSize="12" 
                                                       TextColor="{Binding Role, Converter={StaticResource RoleTextColorConverter}}"
                                                       FontAttributes="Bold"
                                                       HorizontalOptions="Center"/>
                                            </Border>
                                            <Border Grid.Column="3"
                                                    BackgroundColor="{Binding IsActive, Converter={StaticResource StatusColorConverter}}"
                                                    Padding="8,4"
                                                    WidthRequest="70"
                                                    StrokeThickness="0"
                                                    VerticalOptions="Center"
                                                    HorizontalOptions="Start">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="6"/>
                                                </Border.StrokeShape>
                                                <Label Text="{Binding IsActive, Converter={StaticResource StatusTextConverter}}" 
                                                       FontSize="12" 
                                                       TextColor="{Binding IsActive, Converter={StaticResource StatusTextColorConverter}}"
                                                       FontAttributes="Bold"
                                                       HorizontalOptions="Center"/>
                                            </Border>
                                            <HorizontalStackLayout Grid.Column="4" Spacing="10" VerticalOptions="Center" HorizontalOptions="Start">
                                                <Label Text="âœï¸" FontSize="16">
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer Tapped="OnEditUserTapped"/>
                                                    </Label.GestureRecognizers>
                                                </Label>
                                                <Label Text="ğŸ”‘" FontSize="16">
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer Tapped="OnResetPasswordTapped"/>
                                                    </Label.GestureRecognizers>
                                                </Label>
                                                <Label Text="ğŸ—‘ï¸" FontSize="16">
                                                    <Label.GestureRecognizers>
                                                        <TapGestureRecognizer Tapped="OnDeleteUserTapped"/>
                                                    </Label.GestureRecognizers>
                                                </Label>
                                            </HorizontalStackLayout>
                                        </Grid>
                                        <BoxView HeightRequest="1" BackgroundColor="#E5E7EB"/>
                                    </VerticalStackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Add User Modal -->
        <Grid x:Name="AddUserModal"
              Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="2"
              BackgroundColor="#CC000000"
              IsVisible="False"
              Padding="20"
              ZIndex="1000">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnModalBackgroundTapped"/>
            </Grid.GestureRecognizers>

            <Border BackgroundColor="White"
                    Padding="30"
                    StrokeThickness="0"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    WidthRequest="900">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="20">
                    <!-- Header -->
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0"
                               x:Name="ModalHeaderLabel"
                               Text="Add New User"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#1F2937"/>
                        <Label Grid.Column="1"
                               Text="âœ•"
                               FontSize="24"
                               TextColor="#6B7280">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnCloseModalTapped"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>

                    <!-- Form Fields in 2 Columns -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="20" RowDefinitions="Auto,Auto,Auto" RowSpacing="15">
                        <!-- Column 1 -->
                        <!-- Display Name -->
                        <VerticalStackLayout Grid.Column="0" Grid.Row="0" Spacing="5">
                            <Label Text="Full Name" 
                                   FontSize="12" 
                                   FontAttributes="Bold"
                                   TextColor="#374151"/>
                            <Border BackgroundColor="#F3F4F6" StrokeThickness="0" Padding="12,8">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Entry x:Name="DisplayNameEntry"
                                       Placeholder="Enter full name"
                                       PlaceholderColor="#D1D5DB"
                                       TextColor="#1F2937"
                                       BackgroundColor="Transparent"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Email -->
                        <VerticalStackLayout Grid.Column="1" Grid.Row="0" Spacing="5">
                            <Label Text="Email Address" 
                                   FontSize="12" 
                                   FontAttributes="Bold"
                                   TextColor="#374151"/>
                            <Border BackgroundColor="#F3F4F6" StrokeThickness="0" Padding="12,8">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Entry x:Name="EmailEntry"
                                       Placeholder="Enter email address"
                                       PlaceholderColor="#D1D5DB"
                                       TextColor="#1F2937"
                                       BackgroundColor="Transparent"
                                       Keyboard="Email"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Password -->
                        <VerticalStackLayout Grid.Column="0" Grid.Row="1" Spacing="5">
                            <Label Text="Password" 
                                   FontSize="12" 
                                   FontAttributes="Bold"
                                   TextColor="#374151"/>
                            <Border BackgroundColor="#F3F4F6" StrokeThickness="0" Padding="12,8">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Entry x:Name="PasswordEntry"
                                       Placeholder="Enter password"
                                       PlaceholderColor="#D1D5DB"
                                       TextColor="#1F2937"
                                       BackgroundColor="Transparent"
                                       IsPassword="True"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Role -->
                        <VerticalStackLayout Grid.Column="1" Grid.Row="1" Spacing="5">
                            <Label Text="Role" 
                                   FontSize="12" 
                                   FontAttributes="Bold"
                                   TextColor="#374151"/>
                            <Picker x:Name="RolePicker"
                                    BackgroundColor="#F3F4F6"
                                    TextColor="#1F2937"
                                    Title="Select role">
                                <Picker.Items>
                                    <x:String>Student</x:String>
                                    <x:String>Teacher</x:String>
                                    <x:String>Admin</x:String>
                                </Picker.Items>
                            </Picker>
                        </VerticalStackLayout>

                        <!-- Phone Number -->
                        <VerticalStackLayout Grid.Column="0" Grid.Row="2" Spacing="5">
                            <Label Text="Phone Number (Optional)" 
                                   FontSize="12" 
                                   FontAttributes="Bold"
                                   TextColor="#374151"/>
                            <Border BackgroundColor="#F3F4F6" StrokeThickness="0" Padding="12,8">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Entry x:Name="PhoneEntry"
                                       Placeholder="Enter phone number"
                                       PlaceholderColor="#D1D5DB"
                                       TextColor="#1F2937"
                                       BackgroundColor="Transparent"
                                       Keyboard="Telephone"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Address -->
                        <VerticalStackLayout Grid.Column="1" Grid.Row="2" Spacing="5">
                            <Label Text="Address (Optional)" 
                                   FontSize="12" 
                                   FontAttributes="Bold"
                                   TextColor="#374151"/>
                            <Border BackgroundColor="#F3F4F6" StrokeThickness="0" Padding="12,8">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Entry x:Name="AddressEntry"
                                       Placeholder="Enter address"
                                       PlaceholderColor="#D1D5DB"
                                       TextColor="#1F2937"
                                       BackgroundColor="Transparent"/>
                            </Border>
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Buttons -->
                    <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="10">
                        <Button Grid.Column="1"
                                Text="Cancel"
                                BackgroundColor="#E5E7EB"
                                TextColor="#1F2937"
                                FontSize="14"
                                FontAttributes="Bold"
                                CornerRadius="8"
                                Padding="20,12"
                                WidthRequest="120"
                                Clicked="OnCancelAddUserClicked"/>
                        <Button Grid.Column="2"
                                x:Name="ConfirmButton"
                                Text="Submit"
                                BackgroundColor="#005BA5"
                                TextColor="White"
                                FontSize="14"
                                FontAttributes="Bold"
                                CornerRadius="8"
                                Padding="20,12"
                                WidthRequest="120"
                                Clicked="OnConfirmAddUserClicked"/>
                    </Grid>
                </VerticalStackLayout>
            </Border>
        </Grid>
    </Grid>
</ContentPage>
