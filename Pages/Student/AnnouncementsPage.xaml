                                    <Label Text="Registration Period Extended" 
                                           FontSize="16" 
                                           FontAttributes="Bold"
                                           TextColor="#2C3E50"/>
                                    <HorizontalStackLayout Spacing="8">
                                        <Label Text="Academic" 
                                               FontSize="12" 
                                               TextColor="#6B7280"/>
                                        <Label Text="â€¢" 
                                               FontSize="12" 
                                               TextColor="#6B7280"/>
                                        <Label Text="Today, 9:00 AM" 
                                               FontSize="12" 
                                               TextColor="#6B7280"/>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>

                                <Border Grid.Column="2"
                                        BackgroundColor="#EF4444"
                                        Padding="10,6"
                                        StrokeThickness="0"
                                        VerticalOptions="Start">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12"/>
                                    </Border.StrokeShape>
                                    <Label Text="Important" 
                                           TextColor="White"
                                           FontSize="11"
                                           FontAttributes="Bold"/>
                                </Border>
                            </Grid>

                            <!-- Content -->
                            <Label Grid.Row="1"
                                   Text="The registration period for next semester has been extended until Friday, May 15th. Please ensure all course selections are completed by the deadline."
                                   FontSize="14"
                                   TextColor="#4B5563"
                                   LineBreakMode="WordWrap"/>
                        </Grid>
                    </Border>

                    <!-- Announcement 1 - Career Fair Next Week -->
                    <Border x:Name="Announcement1"
                            BackgroundColor="White"
                            Padding="20"
                            StrokeThickness="1"
                            Stroke="#E5E7EB">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Grid RowDefinitions="Auto,Auto" RowSpacing="12">
                            <!-- Header -->
                            <Grid Grid.Row="0" ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                <Border Grid.Column="0"
                                        BackgroundColor="#FEF3C7"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        StrokeThickness="0"
                                        VerticalOptions="Start">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8"/>
                                    </Border.StrokeShape>
                                    <Label Text="ðŸ’¼" 
                                           FontSize="20"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>
                                
                                <VerticalStackLayout Grid.Column="1" Spacing="6" VerticalOptions="Center">
                                    <Label Text="Career Fair Next Week" 
                                           FontSize="16" 
                                           FontAttributes="Bold"
                                           TextColor="#2C3E50"/>
                                    <HorizontalStackLayout Spacing="8">
                                        <Label Text="Events" 
                                               FontSize="12" 
                                               TextColor="#6B7280"/>
                                        <Label Text="â€¢" 
                                               FontSize="12" 
                                               TextColor="#6B7280"/>
                                        <Label Text="Yesterday, 3:30 PM" 
                                               FontSize="12" 
                                               TextColor="#6B7280"/>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Grid>

                            <!-- Content -->
                            <Label Grid.Row="1"
                                   Text="Join us for the annual Career Fair on Wednesday, May 20th. Over 50 companies will be present. Professional attire recommended."
                                   FontSize="14"
                                   TextColor="#4B5563"
                                   LineBreakMode="WordWrap"/>
                        </Grid>
                    </Border>

                    <!-- Announcement 2 - Library Hours Update -->
                    <Border x:Name="Announcement2"
                            BackgroundColor="White"
                            Padding="20"
                            StrokeThickness="1"
                            Stroke="#E5E7EB">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Grid RowDefinitions="Auto,Auto" RowSpacing="12">
                            <!-- Header -->
                            <Grid Grid.Row="0" ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                <Border Grid.Column="0"
                                        BackgroundColor="#DBEAFE"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        StrokeThickness="0"
                                        VerticalOptions="Start">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8"/>
                                    </Border.StrokeShape>
                                    <Label Text="ðŸ“š" 
