<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppIT13.Pages.Student.AnnouncementsPage"
             BackgroundColor="#F5F7FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                BackgroundColor="White"
                StrokeThickness="0">
            <Grid Padding="20,0" ColumnDefinitions="Auto,*,Auto">
                <!-- Logo -->
                <HorizontalStackLayout Grid.Column="0" Spacing="10" VerticalOptions="Center">
                    <Border BackgroundColor="#0891B2" 
                            WidthRequest="32" 
                            HeightRequest="32"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Label Text="S" 
                               TextColor="White" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    <Label Text="StudentHub" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Grid>
        </Border>

        <!-- Left Sidebar -->
        <Border Grid.Row="1" Grid.Column="0" 
                BackgroundColor="White"
                StrokeThickness="0"
                Padding="10">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Top Menu Items -->
                <VerticalStackLayout Grid.Row="0" Spacing="5">
                    <!-- Home Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ " FontSize="18"/>
                            <Label Text="Home" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnHomeTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Messages Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ’¬" FontSize="18"/>
                            <Label Text="Messages" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMessagesTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Announcements Menu Item (Active) -->
                    <Border BackgroundColor="#0891B2" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ“¢" FontSize="18"/>
                            <Label Text="Announcements" 
                                   TextColor="White" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Tickets Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸŽ«" FontSize="18"/>
                            <Label Text="Tickets" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnTicketsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>

                <!-- Bottom Menu Items -->
                <VerticalStackLayout Grid.Row="2" Spacing="5">
                    <!-- Profile Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ‘¤" FontSize="18"/>
                            <Label Text="Profile" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnProfileTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Logout Button -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸšª" FontSize="18"/>
                            <Label Text="Logout" 
                                   TextColor="#EF4444" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLogoutTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollView Grid.Row="1" Grid.Column="1" Padding="30">
            <VerticalStackLayout Spacing="20">
                
                <!-- Page Header -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Announcements &amp; Reminders" 
                           FontSize="24" 
                           FontAttributes="Bold"
                           TextColor="#2C3E50"/>
                    <Label Text="Stay updated with important information" 
                           FontSize="13" 
                           TextColor="#6B7280"/>
                </VerticalStackLayout>

                <!-- Filter Tabs -->
                <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">
                    <Border x:Name="AllTab"
                            BackgroundColor="#0891B2"
                            Padding="20,10"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="6"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAllTabTapped"/>
                        </Border.GestureRecognizers>
                        <Label x:Name="AllTabLabel"
                               Text="All" 
                               TextColor="White"
                               FontSize="14"
                               FontAttributes="Bold"/>
                    </Border>

                    <Border x:Name="AnnouncementsTab"
                            BackgroundColor="Transparent"
                            Padding="20,10"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="6"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAnnouncementsTabTapped"/>
                        </Border.GestureRecognizers>
                        <Label x:Name="AnnouncementsTabLabel"
                               Text="Announcements" 
                               TextColor="#0891B2"
                               FontSize="14"/>
                    </Border>

                    <Border x:Name="RemindersTab"
                            BackgroundColor="Transparent"
                            Padding="20,10"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="6"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnRemindersTabTapped"/>
                        </Border.GestureRecognizers>
                        <Label x:Name="RemindersTabLabel"
                               Text="Reminders" 
                               TextColor="#0891B2"
                               FontSize="14"/>
                    </Border>
                </HorizontalStackLayout>

                <!-- Search Bar -->
                <Border BackgroundColor="White"
                        Padding="15,10"
                        StrokeThickness="1"
                        Stroke="#E5E7EB">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8"/>
                    </Border.StrokeShape>
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="ðŸ”" FontSize="16" VerticalOptions="Center"/>
                        <Entry Placeholder="Search announcements..."
                               PlaceholderColor="#9CA3AF"
                               TextColor="#2C3E50"
                               BackgroundColor="Transparent"
                               VerticalOptions="Center"
                               HorizontalOptions="FillAndExpand"
                               TextChanged="OnSearchTextChanged"/>
                    </HorizontalStackLayout>
                </Border>

                <!-- Announcements List -->
                <CollectionView x:Name="AnnouncementsCollectionView"
                                SelectionMode="None">
                    <CollectionView.EmptyView>
                        <VerticalStackLayout Padding="20" Spacing="8" HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="No announcements yet"
                                   FontSize="14"
                                   TextColor="#6B7280"
                                   HorizontalTextAlignment="Center"/>
                            <Label Text="Check back later for new updates"
                                   FontSize="12"
                                   TextColor="#9CA3AF"
                                   HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border BackgroundColor="White"
                                    Padding="20"
                                    StrokeThickness="1"
                                    Stroke="#E5E7EB"
                                    Margin="0,0,0,15">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnAnnouncementTapped"
                                                          CommandParameter="{Binding .}"/>
                                </Border.GestureRecognizers>
                                <Grid RowDefinitions="Auto,Auto" RowSpacing="12">
                                    <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                        <Border WidthRequest="40"
                                                HeightRequest="40"
                                                StrokeThickness="0"
                                                BackgroundColor="#F0F9FF"
                                                VerticalOptions="Start">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="8"/>
                                            </Border.StrokeShape>
                                            <Border.Triggers>
                                                <DataTrigger TargetType="Border" Binding="{Binding Visibility}" Value="students">
                                                    <Setter Property="BackgroundColor" Value="#D1FAE5"/>
                                                </DataTrigger>
                                            </Border.Triggers>
                                            <Label Text="ðŸ“¢"
                                                   FontSize="20"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center">
                                                <Label.Triggers>
                                                    <DataTrigger TargetType="Label" Binding="{Binding Visibility}" Value="students">
                                                        <Setter Property="Text" Value="ðŸŽ“"/>
                                                    </DataTrigger>
                                                </Label.Triggers>
                                            </Label>
                                        </Border>

                                        <VerticalStackLayout Grid.Column="1" Spacing="6">
                                            <Label Text="{Binding Title}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="#2C3E50"
                                                   LineBreakMode="WordWrap"/>
                                            <HorizontalStackLayout Spacing="8">
                                                <Label Text="{Binding VisibilityLabel}"
                                                       FontSize="12"
                                                       TextColor="#6B7280"/>
                                                <Label Text="â€¢"
                                                       FontSize="12"
                                                       TextColor="#6B7280"/>
                                                <Label Text="{Binding CreatedAt, StringFormat='{}{0:MMM d, h:mm tt}'}"
                                                       FontSize="12"
                                                       TextColor="#6B7280"/>
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>

                                        <Border Grid.Column="2"
                                                BackgroundColor="#F3F4F6"
                                                Padding="10,6"
                                                StrokeThickness="0"
                                                VerticalOptions="Start">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="12"/>
                                            </Border.StrokeShape>
                                            <Label Text="{Binding ViewCount, StringFormat='ðŸ‘ï¸ {0}'}"
                                                   TextColor="#374151"
                                                   FontSize="11"
                                                   FontAttributes="Bold"/>
                                        </Border>
                                    </Grid>

                                    <Label Grid.Row="1"
                                           Text="{Binding Content}"
                                           FontSize="14"
                                           TextColor="#4B5563"
                                           LineBreakMode="WordWrap"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
