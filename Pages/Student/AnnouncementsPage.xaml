                                        <Label Text="2 days ago" 
                                               FontSize="12" 
                                               TextColor="#6B7280"/>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Grid>

                            <!-- Content -->
                            <Label Grid.Row="1"
                                   Text="The library will extend hours during exam week (May 25-30). Open 24/7 with study rooms available for booking."
                                   FontSize="14"
                                   TextColor="#4B5563"
                                   LineBreakMode="WordWrap"/>
                        </Grid>
                    </Border>

                    <!-- Reminder 2 - Scholarship Applications Open -->
                    <Border x:Name="Reminder2"
                            BackgroundColor="White"
                            Padding="20"
                            StrokeThickness="1"
                            Stroke="#E5E7EB">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Grid RowDefinitions="Auto,Auto" RowSpacing="12">
                            <!-- Header -->
                            <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                <Border Grid.Column="0"
                                        BackgroundColor="#D1FAE5"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        StrokeThickness="0"
                                        VerticalOptions="Start">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8"/>
                                    </Border.StrokeShape>
                                    <Label Text="ðŸŽ“" 
