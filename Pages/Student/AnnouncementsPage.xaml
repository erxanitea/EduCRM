                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnTicketsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>

                <!-- Bottom Menu Items -->
                <VerticalStackLayout Grid.Row="2" Spacing="5">
                    <!-- Profile Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ‘¤" FontSize="18"/>
                            <Label Text="Profile" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnProfileTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Logout Button -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸšª" FontSize="18"/>
                            <Label Text="Logout" 
                                   TextColor="#EF4444" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLogoutTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollView Grid.Row="1" Grid.Column="1" Padding="30">
            <VerticalStackLayout Spacing="20">
                
                <!-- Page Header -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Announcements &amp; Reminders" 
                           FontSize="24" 
                           FontAttributes="Bold"
                           TextColor="#2C3E50"/>
                    <Label Text="Stay updated with important information" 
                           FontSize="13" 
                           TextColor="#6B7280"/>
                </VerticalStackLayout>

                <!-- Filter Tabs -->
                <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">
                    <Border x:Name="AllTab"
                            BackgroundColor="#0891B2"
                            Padding="20,10"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="6"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAllTabTapped"/>
                        </Border.GestureRecognizers>
                        <Label x:Name="AllTabLabel"
                               Text="All" 
                               TextColor="White"
                               FontSize="14"
                               FontAttributes="Bold"/>
                    </Border>

                    <Border x:Name="AnnouncementsTab"
                            BackgroundColor="Transparent"
                            Padding="20,10"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="6"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAnnouncementsTabTapped"/>
                        </Border.GestureRecognizers>
                        <Label x:Name="AnnouncementsTabLabel"
                               Text="Announcements" 
                               TextColor="#0891B2"
                               FontSize="14"/>
                    </Border>

                    <Border x:Name="RemindersTab"
                            BackgroundColor="Transparent"
                            Padding="20,10"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="6"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnRemindersTabTapped"/>
                        </Border.GestureRecognizers>
                        <Label x:Name="RemindersTabLabel"
                               Text="Reminders" 
                               TextColor="#0891B2"
                               FontSize="14"/>
                    </Border>
                </HorizontalStackLayout>

                <!-- Search Bar -->
                <Border BackgroundColor="White"
                        Padding="15,10"
                        StrokeThickness="1"
                        Stroke="#E5E7EB">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8"/>
                    </Border.StrokeShape>
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="ðŸ”" FontSize="16" VerticalOptions="Center"/>
                        <Entry Placeholder="Search announcements..."
                               PlaceholderColor="#9CA3AF"
                               TextColor="#2C3E50"
                               BackgroundColor="Transparent"
                               VerticalOptions="Center"
                               HorizontalOptions="FillAndExpand"/>
                    </HorizontalStackLayout>
                </Border>

                <!-- Announcements List -->
                <VerticalStackLayout x:Name="AnnouncementsList" Spacing="15">
                    
                    <!-- Reminder 1 - Registration Period Extended -->
                    <Border x:Name="Reminder1"
                            BackgroundColor="White"
                            Padding="20"
                            StrokeThickness="1"
                            Stroke="#E5E7EB">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Grid RowDefinitions="Auto,Auto" RowSpacing="12">
                            <!-- Header -->
                            <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                <Border Grid.Column="0"
                                        BackgroundColor="#FEE2E2"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        StrokeThickness="0"
                                        VerticalOptions="Start">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8"/>
                                    </Border.StrokeShape>
                                    <Label Text="âš ï¸" 
                                           FontSize="20"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>
                                
