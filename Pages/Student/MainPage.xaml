<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppIT13.Pages.Student.MainPage"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="0"
            VerticalOptions="Center"
            HorizontalOptions="Center">
            
            <!-- Login Card -->
            <Border 
                BackgroundColor="White"
                Padding="40,35"
                StrokeThickness="1"
                Stroke="#E5E7EB"
                WidthRequest="420"
                MaximumWidthRequest="500"
                Shadow="{Shadow Brush=Black, Opacity=0.08, Radius=20, Offset='0,4'}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="8"/>
                </Border.StrokeShape>
                
                <VerticalStackLayout Spacing="25">
                    
                    <!-- Logo Icon -->
                    <Border BackgroundColor="#DBEAFE"
                            WidthRequest="60"
                            HeightRequest="60"
                            HorizontalOptions="Center"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="30"/>
                        </Border.StrokeShape>
                        <Label Text="🎓"
                               FontSize="32"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    
                    <!-- Logo and Title -->
                    <VerticalStackLayout Spacing="6" HorizontalOptions="Center">
                        <Label 
                            Text="Education Portal"
                            FontSize="24"
                            FontAttributes="Bold"
                            TextColor="#111827"
                            HorizontalOptions="Center"/>
                        <Label 
                            Text="Communication &amp; Engagement System"
                            FontSize="11"
                            TextColor="#9CA3AF"
                            HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                    <!-- Subtitle -->
                    <Label
                        Text="Sign in to manage your campus services"
                        FontSize="13"
                        TextColor="#6B7280"
                        HorizontalTextAlignment="Center"
                        Margin="0,-5,0,0"/>

                    <!-- Email Input -->
                    <VerticalStackLayout Spacing="6">
                        <Label 
                            Text="Email"
                            FontSize="13"
                            TextColor="#374151"
                            FontAttributes="None"/>
                        <Border
                            BackgroundColor="#F9FAFB"
                            Stroke="#E5E7EB"
                            StrokeThickness="1"
                            Padding="12,6">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6"/>
                            </Border.StrokeShape>
                            <Entry 
                                x:Name="EmailEntry"
                                Placeholder="email@gmail.com"
                                PlaceholderColor="#9CA3AF"
                                TextColor="#111827"
                                FontSize="12"
                                Keyboard="Email"
                                BackgroundColor="Transparent"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Password Input -->
                    <VerticalStackLayout Spacing="6">
                        <Label 
                            Text="Password"
                            FontSize="13"
                            TextColor="#374151"
                            FontAttributes="None"/>
                        <Border
                            BackgroundColor="#F9FAFB"
                            Stroke="#E5E7EB"
                            StrokeThickness="1"
                            Padding="12,6">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6"/>
                            </Border.StrokeShape>
                            <Entry 
                                x:Name="PasswordEntry"
                                Placeholder="••••••••"
                                PlaceholderColor="#9CA3AF"
                                TextColor="#111827"
                                FontSize="12"
                                IsPassword="True"
                                BackgroundColor="Transparent"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Sign In Button -->
                    <Button 
                        x:Name="SignInBtn"
                        Text="Sign In"
                        BackgroundColor="#0891B2"
                        TextColor="White"
                        FontSize="15"
                        FontAttributes="Bold"
                        CornerRadius="6"
                        HeightRequest="44"
                        Margin="0,5,0,0"
                        Clicked="OnSignInClicked"/>

                    <!-- Role-based note -->
                    <Label 
                        Text="Use your assigned credentials to access School Portal"
                        FontSize="12"
                        TextColor="#9CA3AF"
                        HorizontalTextAlignment="Center"
                        Margin="0,5,0,0"/>

                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
