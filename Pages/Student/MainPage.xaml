<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppIT13.Pages.Student.MainPage"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="0"
            VerticalOptions="Center"
            HorizontalOptions="Center">
            
            <!-- Login Card -->
            <Border 
                BackgroundColor="White"
                Padding="40,30"
                StrokeThickness="0"
                WidthRequest="400"
                MaximumWidthRequest="500"
                Shadow="{Shadow Brush=Black, Opacity=0.1, Radius=10, Offset='0,2'}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                
                <VerticalStackLayout Spacing="20">
                    
                    <!-- Logo and Title -->
                    <VerticalStackLayout Spacing="5">
                        <Label 
                            Text="School Portal"
                            FontSize="28"
                            FontAttributes="Bold"
                            TextColor="#2C3E50"
                            HorizontalOptions="Center"/>
                        <Label 
                            Text="Communication &amp; Engagement System"
                            FontSize="12"
                            TextColor="#7F8C8D"
                            HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                    <!-- Subtitle -->
                    <Label
                        Text="Sign in to manage your campus services"
                        FontSize="14"
                        TextColor="#6B7280"
                        HorizontalTextAlignment="Center"/>

                    <!-- Email Input -->
                    <VerticalStackLayout Spacing="8">
                        <Label 
                            Text="Email"
                            FontSize="14"
                            TextColor="#2C3E50"
                            FontAttributes="Bold"/>
                        <Border
                            BackgroundColor="White"
                            Stroke="#E0E0E0"
                            StrokeThickness="1"
                            Padding="12,8">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6"/>
                            </Border.StrokeShape>
                            <Entry 
                                x:Name="EmailEntry"
                                Placeholder="email@gmail.com"
                                PlaceholderColor="#B0B0B0"
                                TextColor="#2C3E50"
                                Keyboard="Email"
                                BackgroundColor="Transparent"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Password Input -->
                    <VerticalStackLayout Spacing="8">
                        <Label 
                            Text="Password"
                            FontSize="14"
                            TextColor="#2C3E50"
                            FontAttributes="Bold"/>
                        <Border
                            BackgroundColor="White"
                            Stroke="#E0E0E0"
                            StrokeThickness="1"
                            Padding="12,8">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6"/>
                            </Border.StrokeShape>
                            <Entry 
                                x:Name="PasswordEntry"
                                Placeholder="••••••••"
                                PlaceholderColor="#B0B0B0"
                                TextColor="#2C3E50"
                                IsPassword="True"
                                BackgroundColor="Transparent"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Sign In Button -->
                    <Button 
                        x:Name="SignInBtn"
                        Text="Sign In"
                        BackgroundColor="#0891B2"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="6"
                        HeightRequest="48"
                        Margin="0,10,0,0"
                        Clicked="OnSignInClicked"/>

                    <!-- Role-based note -->
                    <Label 
                        Text="Use your assigned credentials to access School Portal services."
                        FontSize="13"
                        TextColor="#6B7280"
                        HorizontalTextAlignment="Center"
                        Margin="0,15,0,0"/>

                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
