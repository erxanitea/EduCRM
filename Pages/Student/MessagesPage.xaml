<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiAppIT13.Models"
             x:Class="MauiAppIT13.Pages.Student.MessagesPage"
             BackgroundColor="#F5F7FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                BackgroundColor="White"
                StrokeThickness="0">
            <Grid Padding="20,0" ColumnDefinitions="Auto,*,Auto">
                <!-- Logo -->
                <HorizontalStackLayout Grid.Column="0" Spacing="10" VerticalOptions="Center">
                    <Border BackgroundColor="#0891B2" 
                            WidthRequest="32" 
                            HeightRequest="32"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Label Text="S" 
                               TextColor="White" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    <Label Text="StudentHub" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Grid>
        </Border>

        <!-- Left Sidebar -->
        <Border Grid.Row="1" Grid.Column="0" 
                BackgroundColor="White"
                StrokeThickness="0"
                Padding="10">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Top Menu Items -->
                <VerticalStackLayout Grid.Row="0" Spacing="5">
                    <!-- Home Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ " FontSize="18"/>
                            <Label Text="Home" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnHomeTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Messages Menu Item (Active) -->
                    <Border BackgroundColor="#0891B2" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ’¬" FontSize="18"/>
                            <Label Text="Messages" 
                                   TextColor="White" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Announcements Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ“¢" FontSize="18"/>
                            <Label Text="Announcements" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAnnouncementsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Tickets Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸŽ«" FontSize="18"/>
                            <Label Text="Tickets" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnTicketsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>

                <!-- Bottom Menu Items -->
                <VerticalStackLayout Grid.Row="2" Spacing="5">
                    <!-- Profile Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ‘¤" FontSize="18"/>
                            <Label Text="Profile" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnProfileTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Logout Button -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸšª" FontSize="18"/>
                            <Label Text="Logout" 
                                   TextColor="#EF4444" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLogoutTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Grid.Column="1" ColumnDefinitions="380,*">
            
            <!-- Conversations List Panel -->
            <Border Grid.Column="0" 
                    BackgroundColor="White"
                    StrokeThickness="0"
                    Padding="0">
                <VerticalStackLayout Spacing="0">
                    <!-- Messages Header -->
                    <Border Padding="20,20,20,15" 
                            BackgroundColor="White"
                            StrokeThickness="0">
                        <Label Text="Messages" 
                               FontSize="20" 
                               FontAttributes="Bold"
                                 FontFamily="MontserratBold"
                               TextColor="#2C3E50"/>
                    </Border>

                    <!-- Search Bar -->
                    <Border Padding="20,0,20,15" 
                            BackgroundColor="White"
                            StrokeThickness="0">
                        <Border BackgroundColor="#F3F4F6"
                                Padding="12,8"
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="ðŸ”" FontSize="16" VerticalOptions="Center"/>
                                <Entry Placeholder="Search conversations..."
                                       PlaceholderColor="#9CA3AF"
                                       TextColor="#2C3E50"
                                       BackgroundColor="Transparent"
                                       VerticalOptions="Center"
                                       HorizontalOptions="FillAndExpand"/>
                            </HorizontalStackLayout>
                        </Border>
                    </Border>

                    <!-- Conversations CollectionView - Bound to data -->
                    <CollectionView x:Name="ConversationsCollectionView"
                                    SelectionMode="Single"
                                    SelectionChanged="OnConversationsSelectionChanged"
                                    VerticalOptions="FillAndExpand"
                                    HorizontalOptions="FillAndExpand">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="local:Conversation">
                                <Border BackgroundColor="White"
                                        Padding="20,15"
                                        StrokeThickness="0"
                                        Margin="0,0,0,1"
                                        InputTransparent="False">
                                    <Grid ColumnDefinitions="48,*,Auto" ColumnSpacing="12">
                                        <!-- Avatar -->
                                        <Border Grid.Column="0"
                                                BackgroundColor="{Binding AvatarColor}"
                                                WidthRequest="48"
                                                HeightRequest="48"
                                                StrokeThickness="0"
                                                VerticalOptions="Start">
                                            <Border.StrokeShape>
                                                <Ellipse/>
                                            </Border.StrokeShape>
                                            <Label Text="{Binding Initials}" 
                                                   TextColor="White"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"/>
                                        </Border>
                                        
                                        <!-- Conversation Info -->
                                        <VerticalStackLayout Grid.Column="1" Spacing="6" VerticalOptions="Center">
                                            <Label Text="{Binding ParticipantName}" 
                                                   FontSize="14" 
                                                   FontAttributes="Bold"
                                                   TextColor="#2C3E50"/>
                                            <Label Text="{Binding ParticipantRole}" 
                                                   FontSize="12" 
                                                   TextColor="#6B7280"/>
                                            <Label Text="{Binding LastMessage}" 
                                                   FontSize="12" 
                                                   TextColor="#6B7280"
                                                   LineBreakMode="TailTruncation"/>
                                        </VerticalStackLayout>
                                        
                                        <!-- Time and Unread Badge -->
                                        <VerticalStackLayout Grid.Column="2" Spacing="6" VerticalOptions="Start">
                                            <Label Text="{Binding LastMessageTime, StringFormat='{0:t}'}" 
                                                   FontSize="11" 
                                                   TextColor="#6B7280"
                                                   HorizontalOptions="End"/>
                                            <Border BackgroundColor="#0891B2"
                                                    WidthRequest="24"
                                                    HeightRequest="24"
                                                    StrokeThickness="0"
                                                    HorizontalOptions="End"
                                                    IsVisible="False">
                                                <Border.StrokeShape>
                                                    <Ellipse/>
                                                </Border.StrokeShape>
                                                <Label Text="{Binding UnreadCount}" 
                                                       TextColor="White"
                                                       FontSize="11"
                                                       FontAttributes="Bold"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"/>
                                            </Border>
                                        </VerticalStackLayout>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>

            <!-- Chat Area -->
            <Border Grid.Column="1" 
                    BackgroundColor="#F9FAFB"
                    StrokeThickness="0">
                <Grid RowDefinitions="*,80">
                    
                    <!-- Empty State - No Messages -->
                    <VerticalStackLayout x:Name="NoMessagesPlaceholder"
                                        Grid.Row="0"
                                        Spacing="20"
                                        Padding="40"
                                        VerticalOptions="Center"
                                        HorizontalOptions="Center">
                        <!-- Icon -->
                        <Label Text="ðŸ’¬" 
                               FontSize="80"
                               HorizontalOptions="Center"/>
                        
                        <!-- Title -->
                        <Label Text="No Messages" 
                               FontSize="24" 
                               FontAttributes="Bold"
                               TextColor="#2C3E50"
                               HorizontalOptions="Center"/>
                        
                        <!-- Description -->
                        <Label Text="Select a conversation to start messaging" 
                               FontSize="14" 
                               TextColor="#6B7280"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>

                    <!-- Messages Area - Dynamic -->
                    <ScrollView x:Name="MessagesScrollView"
                                Grid.Row="0" 
                                Padding="25,20" 
                                IsVisible="False"
                                VerticalOptions="FillAndExpand">
                        <VerticalStackLayout x:Name="MessagesStackLayout" Spacing="15"/>
                    </ScrollView>

                    <!-- Message Input Area -->
                    <Border Grid.Row="1" 
                            BackgroundColor="White"
                            StrokeThickness="0"
                            Padding="25,15">
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                            <Border Grid.Column="0"
                                    BackgroundColor="#F3F4F6"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    StrokeThickness="0"
                                    VerticalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Label Text="ðŸ“Ž" 
                                       FontSize="20"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnAttachFileTapped"/>
                                    </Label.GestureRecognizers>
                                </Label>
                            </Border>

                            <Border Grid.Column="1"
                                    BackgroundColor="#F3F4F6"
                                    Padding="15,8"
                                    StrokeThickness="0"
                                    VerticalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="20"/>
                                </Border.StrokeShape>
                                <Entry x:Name="MessageEntry"
                                       Placeholder="Type your message..."
                                       PlaceholderColor="#9CA3AF"
                                       TextColor="#2C3E50"
                                       BackgroundColor="Transparent"
                                       VerticalOptions="Center"/>
                            </Border>

                            <Border Grid.Column="2"
                                    BackgroundColor="#0891B2"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    StrokeThickness="0"
                                    VerticalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnSendMessageTapped"/>
                                </Border.GestureRecognizers>
                                <Label Text="âž¤" 
                                       TextColor="White"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                        </Grid>
                    </Border>

                </Grid>
            </Border>

        </Grid>
    </Grid>
</ContentPage>
