<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppIT13.Pages.Student.ProfilePage"
             BackgroundColor="#F5F7FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                BackgroundColor="White"
                StrokeThickness="0">
            <Grid Padding="20,0" ColumnDefinitions="Auto,*,Auto">
                <!-- Logo -->
                <HorizontalStackLayout Grid.Column="0" Spacing="10" VerticalOptions="Center">
                    <Border BackgroundColor="#0891B2" 
                            WidthRequest="32" 
                            HeightRequest="32"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Label Text="S" 
                               TextColor="White" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    <Label Text="StudentHub" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <!-- Profile Button (Active) -->
                <HorizontalStackLayout Grid.Column="2" Spacing="8" VerticalOptions="Center">
                    <Image Source="dotnet_bot.png" 
                           WidthRequest="20" 
                           HeightRequest="20"
                           Aspect="AspectFit"/>
                    <Label Text="Profile" 
                           FontSize="14" 
                           TextColor="#0891B2"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Grid>
        </Border>

        <!-- Left Sidebar -->
        <Border Grid.Row="1" Grid.Column="0" 
                BackgroundColor="White"
                StrokeThickness="0"
                Padding="10">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Top Menu Items -->
                <VerticalStackLayout Grid.Row="0" Spacing="5">
                    <!-- Home Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ " FontSize="18"/>
                            <Label Text="Home" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnHomeTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Messages Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ’¬" FontSize="18"/>
                            <Label Text="Messages" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMessagesTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Announcements Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ“¢" FontSize="18"/>
                            <Label Text="Announcements" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAnnouncementsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Tickets Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸŽ«" FontSize="18"/>
                            <Label Text="Tickets" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnTicketsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>

                <!-- Logout at Bottom -->
                <Border Grid.Row="2"
                        BackgroundColor="Transparent" 
                        Padding="15,12"
                        StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8"/>
                    </Border.StrokeShape>
                    <HorizontalStackLayout Spacing="12">
                        <Label Text="ðŸšª" FontSize="18"/>
                        <Label Text="Logout" 
                               TextColor="#EF4444" 
                               FontSize="14"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLogoutTapped"/>
                    </Border.GestureRecognizers>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollView Grid.Row="1" Grid.Column="1" Padding="30">
            <VerticalStackLayout Spacing="25">
                
                <!-- Page Header with Edit Button -->
                <Grid ColumnDefinitions="*,Auto">
                    <Label Grid.Column="0"
                           Text="Student Profile" 
                           FontSize="24" 
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           VerticalOptions="Center"/>
                    <Button Grid.Column="1"
                            Text="âœ Edit Profile"
                            BackgroundColor="#0891B2"
                            TextColor="White"
                            FontSize="14"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            Padding="20,12"
                            VerticalOptions="Center"
                            Clicked="OnEditProfileClicked"/>
                </Grid>

                <!-- Profile Card -->
                <Border BackgroundColor="White"
                        StrokeThickness="1"
                        Stroke="#E5E7EB"
                        Padding="30">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="25">
                        
                        <!-- Profile Avatar -->
                        <Border Grid.Column="0"
                                BackgroundColor="#0891B2"
                                WidthRequest="120"
                                HeightRequest="120"
                                StrokeThickness="0"
                                VerticalOptions="Start">
                            <Border.StrokeShape>
                                <Ellipse/>
                            </Border.StrokeShape>
                            <Label x:Name="AvatarLabel"
                                   Text="SJ" 
                                   TextColor="White"
                                   FontSize="48"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>

                        <!-- Profile Info -->
                        <VerticalStackLayout Grid.Column="1" Spacing="12">
                            <Label x:Name="NameLabel"
                                   Text="Student Name" 
                                   FontSize="28" 
                                   FontAttributes="Bold"
                                   TextColor="#2C3E50"/>
                            <Label x:Name="ProgramLabel"
                                   Text="Program" 
                                   FontSize="16" 
                                   TextColor="#6B7280"/>
                            
                            <!-- Badges -->
                            <HorizontalStackLayout Spacing="10" Margin="0,5,0,0">
                                <Border BackgroundColor="#DBEAFE"
                                        Padding="10,6"
                                        StrokeThickness="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12"/>
                                    </Border.StrokeShape>
                                    <Label Text="Year 3" 
                                           TextColor="#0891B2"
                                           FontSize="12"
                                           FontAttributes="Bold"/>
                                </Border>
                                
                                <Border BackgroundColor="#FEF3C7"
                                        Padding="10,6"
                                        StrokeThickness="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12"/>
                                    </Border.StrokeShape>
                                    <Label Text="Dean's List" 
                                           TextColor="#D97706"
                                           FontSize="12"
                                           FontAttributes="Bold"/>
                                </Border>
                                
                                <Border BackgroundColor="#E0E7FF"
                                        Padding="10,6"
                                        StrokeThickness="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12"/>
                                    </Border.StrokeShape>
                                    <Label Text="Research Assistant" 
                                           TextColor="#4F46E5"
                                           FontSize="12"
                                           FontAttributes="Bold"/>
                                </Border>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Grid>
                </Border>

                <!-- Contact Information Card -->
                <Border BackgroundColor="White"
                        StrokeThickness="1"
                        Stroke="#E5E7EB"
                        Padding="25">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    
                    <VerticalStackLayout Spacing="20">
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Contact Information" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   TextColor="#2C3E50"/>
                            <Label Text="Your contact details and location" 
                                   FontSize="13" 
                                   TextColor="#6B7280"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="15">
                            <!-- Email -->
                            <HorizontalStackLayout Spacing="15">
                                <Border BackgroundColor="#DBEAFE"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        StrokeThickness="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8"/>
                                    </Border.StrokeShape>
                                    <Label Text="ðŸ“§" 
                                           FontSize="20"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                                    <Label Text="Email" 
                                           FontSize="12" 
                                           TextColor="#6B7280"/>
                                    <Label x:Name="EmailLabel"
                                           Text="student@university.edu" 
                                           FontSize="14" 
                                           TextColor="#2C3E50"
                                           FontAttributes="Bold"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>

                            <!-- Phone -->
                            <HorizontalStackLayout Spacing="15">
                                <Border BackgroundColor="#DBEAFE"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        StrokeThickness="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8"/>
                                    </Border.StrokeShape>
                                    <Label Text="ðŸ“±" 
                                           FontSize="20"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                                    <Label Text="Phone" 
                                           FontSize="12" 
                                           TextColor="#6B7280"/>
                                    <Label x:Name="PhoneLabel"
                                           Text="+1 (555) 000-0000" 
                                           FontSize="14" 
                                           TextColor="#2C3E50"
                                           FontAttributes="Bold"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>

                            <!-- Campus Address -->
                            <HorizontalStackLayout Spacing="15">
                                <Border BackgroundColor="#DBEAFE"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        StrokeThickness="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8"/>
                                    </Border.StrokeShape>
                                    <Label Text="ðŸ¢" 
                                           FontSize="20"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                                    <Label Text="Campus Location" 
                                           FontSize="12" 
                                           TextColor="#6B7280"/>
                                    <Label Text="Davao City" 
                                           FontSize="14" 
                                           TextColor="#2C3E50"
                                           FontAttributes="Bold"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>

                            <!-- Home Address -->
                            <HorizontalStackLayout Spacing="15">
                                <Border BackgroundColor="#FEE2E2"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        StrokeThickness="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8"/>
                                    </Border.StrokeShape>
                                    <Label Text="ðŸ " 
                                           FontSize="20"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>
                                <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                                    <Label Text="Address" 
                                           FontSize="12" 
                                           TextColor="#6B7280"/>
                                    <Label x:Name="AddressLabel"
                                           Text="Building A, Room 205, Campus" 
                                           FontSize="14" 
                                           TextColor="#2C3E50"
                                           FontAttributes="Bold"
                                           LineBreakMode="WordWrap"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Two Column Layout for Academic Details and Achievements -->
                <Grid ColumnDefinitions="1.2*,*" ColumnSpacing="20">
                    
                    <!-- Academic Details Card -->
                    <Border Grid.Column="0"
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="25">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                        
                        <VerticalStackLayout Spacing="18">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="ðŸŽ“" FontSize="18"/>
                                <Label Text="Academic Details" 
                                       FontSize="18" 
                                       FontAttributes="Bold"
                                       TextColor="#2C3E50"/>
                            </HorizontalStackLayout>

                            <VerticalStackLayout Spacing="12">
                                <!-- Student ID -->
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="Student ID" 
                                           FontSize="12" 
                                           TextColor="#6B7280"/>
                                    <Label x:Name="StudentIdLabel"
                                           Text="STU-2021-0456" 
                                           FontSize="14" 
                                           TextColor="#2C3E50"
                                           FontAttributes="Bold"/>
                                </VerticalStackLayout>

                                <!-- Program -->
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="Program" 
                                           FontSize="12" 
                                           TextColor="#6B7280"/>
                                    <Label x:Name="ProgramDetailLabel"
                                           Text="Bachelor of Science in Computer Science" 
                                           FontSize="14" 
                                           TextColor="#2C3E50"
                                           FontAttributes="Bold"
                                           LineBreakMode="WordWrap"/>
                                </VerticalStackLayout>

                                <!-- Year Level -->
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="Year Level" 
                                           FontSize="12" 
                                           TextColor="#6B7280"/>
                                    <Label x:Name="YearLevelLabel"
                                           Text="Year 3" 
                                           FontSize="14" 
                                           TextColor="#2C3E50"
                                           FontAttributes="Bold"/>
                                </VerticalStackLayout>

                                <!-- Current GPA -->
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="Current GPA" 
                                           FontSize="12" 
                                           TextColor="#6B7280"/>
                                    <Label x:Name="GPALabel"
                                           Text="3.85 / 4.0" 
                                           FontSize="14" 
                                           TextColor="#10B981"
                                           FontAttributes="Bold"/>
                                </VerticalStackLayout>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Achievements Card -->
                    <Border Grid.Column="1"
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="25">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                        
                        <VerticalStackLayout Spacing="18">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="ðŸ†" FontSize="18"/>
                                <Label Text="Achievements" 
                                       FontSize="18" 
                                       FontAttributes="Bold"
                                       TextColor="#2C3E50"/>
                            </HorizontalStackLayout>

                            <!-- Dynamic Achievements CollectionView -->
                            <CollectionView x:Name="AchievementsCollectionView"
                                          SelectionMode="None">
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="15"/>
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <HorizontalStackLayout Spacing="10">
                                            <Label Text="â­" FontSize="18" VerticalOptions="Start"/>
                                            <VerticalStackLayout Spacing="4">
                                                <Label Text="{Binding AchievementName}" 
                                                       FontSize="13" 
                                                       FontAttributes="Bold"
                                                       TextColor="#2C3E50"/>
                                                <Label Text="{Binding Description}" 
                                                       FontSize="11" 
                                                       TextColor="#6B7280"
                                                       LineBreakMode="WordWrap"/>
                                            </VerticalStackLayout>
                                        </HorizontalStackLayout>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Edit Profile Modal Overlay (Hidden by default) -->
        <Border x:Name="EditProfileModal"
                Grid.RowSpan="2"
                Grid.ColumnSpan="2"
                BackgroundColor="#80000000"
                IsVisible="False"
                Padding="0">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnEditProfileModalBackgroundTapped"/>
            </Border.GestureRecognizers>

            <!-- Edit Profile Modal -->
            <Border BackgroundColor="White"
                    WidthRequest="420"
                    Padding="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="14"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.25" Radius="25" Offset="0,12"/>
                </Border.Shadow>

                <VerticalStackLayout Spacing="0">
                    <!-- Modal Header with Background -->
                    <Border BackgroundColor="#0891B2" Padding="25,20" StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="14,14,0,0"/>
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="*,Auto">
                            <VerticalStackLayout Grid.Column="0" Spacing="4">
                                <Label Text="Edit Profile" 
                                       FontSize="18" 
                                       FontAttributes="Bold"
                                       TextColor="White"/>
                                <Label Text="Update your information" 
                                       FontSize="12" 
                                       TextColor="#E0F2FE"/>
                            </VerticalStackLayout>
                            <Label Grid.Column="1"
                                   Text="âœ•"
                                   FontSize="24"
                                   TextColor="White"
                                   VerticalOptions="Start"
                                   Margin="0,-3,0,0">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnCloseEditProfileModalTapped"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </Grid>
                    </Border>

                    <!-- Form Content -->
                    <VerticalStackLayout Spacing="14" Padding="25,20">
                        <!-- Phone Section -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Phone Number" 
                                   FontSize="13" 
                                   TextColor="#2C3E50"
                                   FontAttributes="Bold"/>
                            <Border BackgroundColor="#F9FAFB"
                                    Stroke="#E5E7EB"
                                    StrokeThickness="1"
                                    Padding="12,10">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Entry x:Name="EditPhoneEntry"
                                       Placeholder="+1 (555) 000-0000"
                                       PlaceholderColor="#9CA3AF"
                                       TextColor="#2C3E50"
                                       BackgroundColor="Transparent"
                                       FontSize="13"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Address Section -->
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Address" 
                                   FontSize="13" 
                                   TextColor="#2C3E50"
                                   FontAttributes="Bold"/>
                            <Border BackgroundColor="#F9FAFB"
                                    Stroke="#E5E7EB"
                                    StrokeThickness="1"
                                    Padding="12,10">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Editor x:Name="EditAddressEditor"
                                        Placeholder="Enter your address"
                                        PlaceholderColor="#9CA3AF"
                                        TextColor="#2C3E50"
                                        BackgroundColor="Transparent"
                                        FontSize="13"
                                        HeightRequest="70"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Action Buttons -->
                        <HorizontalStackLayout Spacing="12" Padding="0,8,0,0">
                            <Button Text="Cancel"
                                    Clicked="OnCancelEditProfileClicked"
                                    BackgroundColor="#F3F4F6"
                                    TextColor="#2C3E50"
                                    Padding="12,10"
                                    CornerRadius="8"
                                    FontSize="13"
                                    HorizontalOptions="FillAndExpand"/>
                            
                            <Button Text="Save"
                                    Clicked="OnSaveEditProfileClicked"
                                    BackgroundColor="#0891B2"
                                    TextColor="White"
                                    Padding="12,10"
                                    CornerRadius="8"
                                    FontSize="13"
                                    HorizontalOptions="FillAndExpand"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>
        </Border>
    </Grid>
</ContentPage>
