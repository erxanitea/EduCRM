<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppIT13.Pages.Student.TicketsPage"
             BackgroundColor="#F5F7FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                BackgroundColor="#0891B2"
                StrokeThickness="0">
            <Grid Padding="20,0" ColumnDefinitions="Auto,*,Auto">
                <!-- Logo -->
                <HorizontalStackLayout Grid.Column="0" Spacing="10" VerticalOptions="Center">
                    <Border BackgroundColor="White" 
                            WidthRequest="32" 
                            HeightRequest="32"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Label Text="S" 
                               TextColor="#0891B2" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    <Label Text="StudentHub" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Grid>
        </Border>

        <!-- Left Sidebar -->
        <Border Grid.Row="1" Grid.Column="0" 
                BackgroundColor="White"
                StrokeThickness="0"
                Padding="10">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Top Menu Items -->
                <VerticalStackLayout Grid.Row="0" Spacing="5">
                    <!-- Home Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ " FontSize="18"/>
                            <Label Text="Home" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnHomeTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Messages Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ’¬" FontSize="18"/>
                            <Label Text="Messages" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMessagesTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Announcements Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ“¢" FontSize="18"/>
                            <Label Text="Announcements" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAnnouncementsTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Tickets Menu Item (Active) -->
                    <Border BackgroundColor="#0891B2" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸŽ«" FontSize="18"/>
                            <Label Text="Tickets" 
                                   TextColor="White" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>
                </VerticalStackLayout>

                <!-- Bottom Menu Items -->
                <VerticalStackLayout Grid.Row="2" Spacing="5">
                    <!-- Profile Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ‘¤" FontSize="18"/>
                            <Label Text="Profile" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnProfileTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Logout Button -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸšª" FontSize="18"/>
                            <Label Text="Logout" 
                                   TextColor="#EF4444" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLogoutTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollView Grid.Row="1" Grid.Column="1" Padding="30">
            <VerticalStackLayout Spacing="20">
                
                <!-- Page Header -->
                <Grid ColumnDefinitions="*,Auto">
                    <VerticalStackLayout Grid.Column="0" Spacing="5">
                        <Label Text="Support Tickets" 
                               FontSize="24" 
                               FontAttributes="Bold"
                               TextColor="#2C3E50"/>
                        <Label Text="Track and manage your support requests" 
                               FontSize="13" 
                               TextColor="#6B7280"/>
                    </VerticalStackLayout>

                    <!-- New Ticket Button -->
                    <Button Grid.Column="1"
                            Text="+ New Ticket"
                            BackgroundColor="#0891B2"
                            TextColor="White"
                            FontSize="14"
                            FontAttributes="Bold"
                            CornerRadius="8"
                            Padding="20,12"
                            VerticalOptions="Center"
                            Clicked="OnNewTicketClicked"/>
                </Grid>

                <!-- Statistics Cards -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="15">
                    <!-- Open -->
                    <Border Grid.Column="0" 
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20,15">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="Open" 
                                       FontSize="13" 
                                       TextColor="#6B7280"/>
                                <Label Grid.Column="1"
                                       Text="ðŸ”´" FontSize="16"/>
                            </Grid>
                            <Label x:Name="OpenCountLabel"
                                   Text="0" 
                                   FontSize="32" 
                                   FontAttributes="Bold"
                                   TextColor="#6B7280"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- In Progress -->
                    <Border Grid.Column="1" 
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20,15">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="In Progress" 
                                       FontSize="13" 
                                       TextColor="#6B7280"/>
                                <Label Grid.Column="1"
                                       Text="ðŸŸ¡" FontSize="16"/>
                            </Grid>
                            <Label x:Name="InProgressCountLabel"
                                   Text="0" 
                                   FontSize="32" 
                                   FontAttributes="Bold"
                                   TextColor="#6B7280"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Resolved -->
                    <Border Grid.Column="2" 
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E5E7EB"
                            Padding="20,15">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="8">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0"
                                       Text="Resolved" 
                                       FontSize="13" 
                                       TextColor="#6B7280"/>
                                <Label Grid.Column="1"
                                       Text="âœ…" FontSize="16"/>
                            </Grid>
                            <Label x:Name="ResolvedCountLabel"
                                   Text="0" 
                                   FontSize="32" 
                                   FontAttributes="Bold"
                                   TextColor="#FF474747"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- Tickets List -->
                <CollectionView x:Name="TicketsCollectionView"
                                SelectionMode="Single"
                                SelectionChangedCommand="{Binding SelectionChangedCommand}"
                                SelectionChangedCommandParameter="{Binding SelectedItem, Source={RelativeSource Self}}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="15"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border BackgroundColor="White"
                                    Padding="16"
                                    StrokeThickness="1"
                                    Stroke="#E5E7EB"
                                    Margin="0,0,0,8">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <VerticalStackLayout Spacing="12">
                                    <!-- Header with Title and Badges -->
                                    <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="8">
                                        <VerticalStackLayout Grid.Column="0" Spacing="4">
                                            <Label Text="{Binding Title}" 
                                                   FontSize="15" 
                                                   FontAttributes="Bold"
                                                   TextColor="#1F2937"/>
                                            <Label Text="{Binding CreatedAt, StringFormat='Created {0:M/d/yyyy}'}" 
                                                   FontSize="12" 
                                                   TextColor="#9CA3AF"/>
                                        </VerticalStackLayout>

                                        <!-- Status Badge -->
                                        <Border Grid.Column="1"
                                                BackgroundColor="{Binding StatusColor}"
                                                Padding="8,4"
                                                StrokeThickness="0"
                                                VerticalOptions="Start">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="12"/>
                                            </Border.StrokeShape>
                                            <Label Text="{Binding Status, StringFormat='{0:G}'}" 
                                                   TextColor="White"
                                                   FontSize="11"
                                                   FontAttributes="Bold"/>
                                        </Border>

                                        <!-- Priority Badge -->
                                        <Border Grid.Column="2"
                                                BackgroundColor="{Binding PriorityColor}"
                                                Padding="8,4"
                                                StrokeThickness="0"
                                                VerticalOptions="Start">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="12"/>
                                            </Border.StrokeShape>
                                            <Label Text="{Binding Priority, StringFormat='{0:G}'}" 
                                                   TextColor="White"
                                                   FontSize="11"
                                                   FontAttributes="Bold"/>
                                        </Border>
                                    </Grid>

                                    <!-- Description -->
                                    <Label Grid.Row="1"
                                           Text="{Binding Description}"
                                           FontSize="13"
                                           TextColor="#6B7280"
                                           LineBreakMode="WordWrap"/>

                                    <!-- Actions -->
                                    <HorizontalStackLayout Spacing="12">
                                        <Button Text="View Details"
                                                BackgroundColor="Transparent"
                                                TextColor="#0891B2"
                                                FontSize="12"
                                                Padding="0"
                                                Clicked="OnViewDetailsClicked"/>
                                        <Button Text="Add Comment"
                                                BackgroundColor="Transparent"
                                                TextColor="#0891B2"
                                                FontSize="12"
                                                Padding="0"
                                                Clicked="OnAddCommentClicked"/>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Modal Overlay (Hidden by default) -->
        <Border x:Name="ModalOverlay"
                Grid.RowSpan="2"
                Grid.ColumnSpan="2"
                BackgroundColor="#80000000"
                IsVisible="False"
                Padding="0">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnOverlayTapped"/>
            </Border.GestureRecognizers>
            
            <!-- Create Ticket Modal -->
            <Border BackgroundColor="White"
                    WidthRequest="500"
                    Padding="0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    StrokeThickness="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="14"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.25" Radius="25" Offset="0,12"/>
                </Border.Shadow>

                <VerticalStackLayout Spacing="0">
                    <!-- Modal Header with Background -->
                    <Border BackgroundColor="#0891B2" Padding="30,25" StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="14,14,0,0"/>
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="*,Auto">
                            <VerticalStackLayout Grid.Column="0" Spacing="6">
                                <Label Text="Create Support Ticket" 
                                       FontSize="22" 
                                       FontAttributes="Bold"
                                       TextColor="White"/>
                                <Label Text="Submit a new support request" 
                                       FontSize="13" 
                                       TextColor="#E0F2FE"/>
                            </VerticalStackLayout>
                            <Label Grid.Column="1"
                                   Text="âœ•"
                                   FontSize="28"
                                   TextColor="White"
                                   VerticalOptions="Start"
                                   Margin="0,-5,0,0">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnCloseModalTapped"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </Grid>
                    </Border>

                    <!-- Form Content -->
                    <VerticalStackLayout Spacing="18" Padding="30,25">
                        
                        <!-- Title Field -->
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Title *" 
                                   FontSize="14" 
                                   TextColor="#2C3E50"
                                   FontAttributes="Bold"/>
                            <Border BackgroundColor="#F9FAFB"
                                    Stroke="#E5E7EB"
                                    StrokeThickness="1"
                                    Padding="14,12">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Entry x:Name="TitleEntry"
                                       Placeholder="Brief description of your issue"
                                       PlaceholderColor="#9CA3AF"
                                       TextColor="#2C3E50"
                                       BackgroundColor="Transparent"
                                       FontSize="14"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Category and Priority Row -->
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                            <!-- Category Picker -->
                            <VerticalStackLayout Grid.Column="0" Spacing="10">
                                <Label Text="Category *" 
                                       FontSize="14" 
                                       TextColor="#2C3E50"
                                       FontAttributes="Bold"/>
                                <Picker x:Name="CategoryPicker"
                                        TextColor="#2C3E50"
                                        BackgroundColor="White"
                                        FontSize="14">
                                    <Picker.Items>
                                        <x:String>Select category</x:String>
                                        <x:String>Academic</x:String>
                                        <x:String>Facilities</x:String>
                                        <x:String>Administration</x:String>
                                        <x:String>Technical</x:String>
                                        <x:String>Financial</x:String>
                                        <x:String>Other</x:String>
                                    </Picker.Items>
                                    <Picker.SelectedIndex>0</Picker.SelectedIndex>
                                </Picker>
                            </VerticalStackLayout>

                            <!-- Priority Picker -->
                            <VerticalStackLayout Grid.Column="1" Spacing="10">
                                <Label Text="Priority *" 
                                       FontSize="14" 
                                       TextColor="#2C3E50"
                                       FontAttributes="Bold"/>
                                <Picker x:Name="PriorityPicker"
                                        TextColor="#2C3E50"
                                        BackgroundColor="White"
                                        FontSize="14">
                                    <Picker.Items>
                                        <x:String>Select priority</x:String>
                                        <x:String>Low</x:String>
                                        <x:String>Medium</x:String>
                                        <x:String>High</x:String>
                                    </Picker.Items>
                                    <Picker.SelectedIndex>0</Picker.SelectedIndex>
                                </Picker>
                            </VerticalStackLayout>
                        </Grid>

                        <!-- Description Field -->
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Description *" 
                                   FontSize="14" 
                                   TextColor="#2C3E50"
                                   FontAttributes="Bold"/>
                            <Border BackgroundColor="#F9FAFB"
                                    Stroke="#E5E7EB"
                                    StrokeThickness="1"
                                    Padding="14,12">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Editor x:Name="DescriptionEditor"
                                        Placeholder="Provide detailed information about your issue..."
                                        PlaceholderColor="#9CA3AF"
                                        TextColor="#2C3E50"
                                        BackgroundColor="Transparent"
                                        HeightRequest="110"
                                        FontSize="14"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Action Buttons -->
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,8,0,0">
                            <Button Grid.Column="0"
                                    Text="Cancel"
                                    BackgroundColor="#F3F4F6"
                                    TextColor="#6B7280"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    CornerRadius="8"
                                    HeightRequest="48"
                                    Clicked="OnCancelTicketClicked"/>
                            <Button Grid.Column="1"
                                    Text="Submit Ticket"
                                    BackgroundColor="#0891B2"
                                    TextColor="White"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    CornerRadius="8"
                                    HeightRequest="48"
                                    Clicked="OnSubmitTicketClicked"/>
                        </Grid>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </Border>
        </Border>

    </Grid>
</ContentPage>
