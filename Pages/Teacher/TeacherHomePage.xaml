                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6"/>
                                </Border.StrokeShape>
                                <Grid ColumnDefinitions="40,*,Auto" ColumnSpacing="12">
                                    <Border Grid.Column="0"
                                            BackgroundColor="#DBEAFE"
                                            WidthRequest="40"
                                            HeightRequest="40"
                                            StrokeThickness="0">
