                            <Border BackgroundColor="#F9FAFB"
                                    Padding="12"
                                    StrokeThickness="0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6"/>
                                </Border.StrokeShape>
                                <HorizontalStackLayout Spacing="10">
                                    <Border BackgroundColor="#FFF5E5"
                                            WidthRequest="40"
                                            HeightRequest="40"
                                            StrokeThickness="0">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="6"/>
