<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiAppIT13.Models"
             x:Class="MauiAppIT13.Pages.Teacher.TeacherMessagesPage"
             BackgroundColor="#F5F7FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                BackgroundColor="#059669"
                StrokeThickness="0">
            <Grid Padding="20,0" ColumnDefinitions="Auto,*,Auto">
                <!-- Logo -->
                <HorizontalStackLayout Grid.Column="0" Spacing="10" VerticalOptions="Center">
                    <Border BackgroundColor="White" 
                            WidthRequest="32" 
                            HeightRequest="32"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <Label Text="T" 
                               TextColor="#059669" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>
                    <Label Text="Teacher Portal" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Grid>
        </Border>

        <!-- Left Sidebar -->
        <Border Grid.Row="1" Grid.Column="0" 
                BackgroundColor="White"
                StrokeThickness="0"
                Padding="10">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Top Menu Items -->
                <VerticalStackLayout Grid.Row="0" Spacing="5">
                    <!-- Dashboard Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ“Š" FontSize="18"/>
                            <Label Text="Dashboard" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnDashboardTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Classes Menu Item -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ“š" FontSize="18"/>
                            <Label Text="Classes" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnClassesTapped"/>
                        </Border.GestureRecognizers>
                    </Border>

                    <!-- Messages Menu Item (Active) -->
                    <Border BackgroundColor="#059669" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ’¬" FontSize="18"/>
                            <Label Text="Messages" 
                                   TextColor="White" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>
                </VerticalStackLayout>

                <!-- Bottom Menu Items -->
                <VerticalStackLayout Grid.Row="2" Spacing="5">
                    <!-- Teacher Profile -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸ‘¤" FontSize="18"/>
                            <Label Text="Teacher" 
                                   TextColor="#6B7280" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Logout Button -->
                    <Border BackgroundColor="Transparent" 
                            Padding="15,12"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8"/>
                        </Border.StrokeShape>
                        <HorizontalStackLayout Spacing="12">
                            <Label Text="ðŸšª" FontSize="18"/>
                            <Label Text="Logout" 
                                   TextColor="#EF4444" 
                                   FontSize="14"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLogoutTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </VerticalStackLayout>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Grid.Column="1" ColumnDefinitions="380,*">
            
            <!-- Conversations List Panel -->
            <Border Grid.Column="0" 
                    BackgroundColor="White"
                    StrokeThickness="0"
                    Padding="0">
                <VerticalStackLayout Spacing="0">
                    <!-- Messages Header -->
                    <Border Padding="20,20,20,15" 
                            BackgroundColor="White"
                            StrokeThickness="0">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Grid.Column="0"
                                   Text="Messages" 
                                   FontSize="20" 
                                   FontAttributes="Bold"
                                   TextColor="#2C3E50"
                                   VerticalOptions="Center"/>
                            <Button Grid.Column="1"
                                    Text="+ New"
                                    BackgroundColor="#059669"
                                    TextColor="White"
                                    FontSize="13"
                                    FontAttributes="Bold"
                                    CornerRadius="6"
                                    Padding="15,8"
                                    Clicked="OnNewMessageClicked"/>
                        </Grid>
                    </Border>

                    <!-- Search Bar -->
                    <Border Padding="20,0,20,15" 
                            BackgroundColor="White"
                            StrokeThickness="0">
                        <Border BackgroundColor="#F3F4F6"
                                Padding="12,8"
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="ðŸ”" FontSize="16" VerticalOptions="Center"/>
                                <Entry Placeholder="Search conversations..."
                                       PlaceholderColor="#9CA3AF"
                                       TextColor="#2C3E50"
                                       BackgroundColor="Transparent"
                                       VerticalOptions="Center"
                                       HorizontalOptions="FillAndExpand"/>
                            </HorizontalStackLayout>
                        </Border>
                    </Border>

                    <!-- Filter Tabs -->
                    <HorizontalStackLayout Padding="20,0,20,10" Spacing="8">
                        <Border x:Name="AllTab"
                                BackgroundColor="#059669"
                                Padding="12,6"
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6"/>
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnAllTabTapped"/>
                            </Border.GestureRecognizers>
                            <Label Text="All" 
                                   TextColor="White"
                                   FontSize="13"
                                   FontAttributes="Bold"/>
                        </Border>

                        <Border x:Name="StudentsTab"
                                BackgroundColor="Transparent"
                                Padding="12,6"
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6"/>
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnStudentsTabTapped"/>
                            </Border.GestureRecognizers>
                            <Label Text="Students" 
                                   TextColor="#059669"
                                   FontSize="13"/>
                        </Border>

                        <Border x:Name="StaffTab"
                                BackgroundColor="Transparent"
                                Padding="12,6"
                                StrokeThickness="0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="6"/>
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnStaffTabTapped"/>
                            </Border.GestureRecognizers>
                            <Label Text="Staff" 
                                   TextColor="#059669"
                                   FontSize="13"/>
                        </Border>
                    </HorizontalStackLayout>

                    <!-- Conversations List -->
                    <CollectionView x:Name="ConversationsCollectionView"
                                    SelectionMode="Single"
                                    SelectionChanged="OnConversationsSelectionChanged"
                                    VerticalOptions="FillAndExpand">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="local:Conversation">
                                <Border BackgroundColor="White"
                                        Padding="20,15"
                                        StrokeThickness="0"
                                        Margin="0,0,0,1">
                                    <Grid ColumnDefinitions="48,*,Auto" ColumnSpacing="12">
                                        <Border Grid.Column="0"
                                                BackgroundColor="{Binding AvatarColor}"
                                                WidthRequest="48"
                                                HeightRequest="48"
                                                StrokeThickness="0"
                                                VerticalOptions="Start">
                                            <Border.StrokeShape>
                                                <Ellipse/>
                                            </Border.StrokeShape>
                                            <Label Text="{Binding Initials}" 
                                                   TextColor="White"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"/>
                                        </Border>
                                        
                                        <VerticalStackLayout Grid.Column="1" Spacing="6" VerticalOptions="Center">
                                            <Label Text="{Binding ParticipantName}" 
                                                   FontSize="14" 
                                                   FontAttributes="Bold"
                                                   TextColor="#2C3E50"/>
                                            <Label Text="{Binding ParticipantRole}" 
                                                   FontSize="12" 
                                                   TextColor="#6B7280"/>
                                            <Label Text="{Binding LastMessage}" 
                                                   FontSize="12" 
                                                   TextColor="#6B7280"
                                                   LineBreakMode="TailTruncation"/>
                                        </VerticalStackLayout>
                                        
                                        <Label Grid.Column="2" 
                                               Text="{Binding LastMessageLocalTime, StringFormat='{0:g}'}" 
                                               FontSize="11" 
                                               TextColor="#6B7280"
                                               VerticalOptions="Start"
                                               HorizontalOptions="End"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Border>

            <!-- Chat Area -->
            <Border Grid.Column="1" 
                    BackgroundColor="#F9FAFB"
                    StrokeThickness="0">
                <Grid RowDefinitions="Auto,*,80">
                    
                    <!-- Chat Header -->
                    <Border Grid.Row="0"
                            BackgroundColor="White"
                            Padding="25,15"
                            StrokeThickness="0"
                            Margin="0,0,0,1">
                        <Grid ColumnDefinitions="48,*,Auto" ColumnSpacing="12">
                            <Border x:Name="ChatAvatarBorder"
                                    Grid.Column="0"
                                    BackgroundColor="#DBEAFE"
                                    WidthRequest="48"
                                    HeightRequest="48"
                                    StrokeThickness="0">
                                <Border.StrokeShape>
                                    <Ellipse/>
                                </Border.StrokeShape>
                                <Label x:Name="ChatAvatarInitialsLabel"
                                       Text="--"
                                       TextColor="#0891B2"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            
                            <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                <Label x:Name="ChatParticipantNameLabel"
                                       Text="Select a conversation"
                                       FontSize="16" 
                                       FontAttributes="Bold"
                                       TextColor="#2C3E50"/>
                                <Label x:Name="ChatParticipantRoleLabel"
                                       Text=""
                                       FontSize="13" 
                                       TextColor="#6B7280"/>
                            </VerticalStackLayout>

                            <HorizontalStackLayout Grid.Column="2" Spacing="10" VerticalOptions="Center">
                                <Border BackgroundColor="#F3F4F6"
                                        WidthRequest="36"
                                        HeightRequest="36"
                                        StrokeThickness="0">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="6"/>
                                    </Border.StrokeShape>
                                    <Label Text="â„¹ï¸" 
                                           FontSize="18"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>
                            </HorizontalStackLayout>
                        </Grid>
                    </Border>

                    <!-- Messages Area -->
                    <Grid Grid.Row="1">
                        <VerticalStackLayout x:Name="NoMessagesPlaceholder"
                                            Spacing="20"
                                            Padding="40"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Center">
                            <Label Text="ðŸ’¬"
                                   FontSize="80"
                                   HorizontalOptions="Center"/>
                            <Label Text="No Messages"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="#2C3E50"
                                   HorizontalOptions="Center"/>
                            <Label Text="Select a conversation to start messaging"
                                   FontSize="14"
                                   TextColor="#6B7280"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>

                        <ScrollView x:Name="MessagesScrollView"
                                    Padding="25,20"
                                    IsVisible="False"
                                    VerticalOptions="FillAndExpand">
                            <VerticalStackLayout x:Name="MessagesStackLayout" Spacing="15"/>
                        </ScrollView>
                    </Grid>

                    <!-- Message Input Area -->
                    <Border Grid.Row="2" 
                            BackgroundColor="White"
                            StrokeThickness="0"
                            Padding="25,15">
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                            <Border Grid.Column="0"
                                    BackgroundColor="#F3F4F6"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    StrokeThickness="0"
                                    VerticalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Label Text="ðŸ“Ž" 
                                       FontSize="20"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnAttachFileTapped"/>
                                    </Label.GestureRecognizers>
                                </Label>
                            </Border>

                            <Border Grid.Column="1"
                                    BackgroundColor="#F3F4F6"
                                    Padding="15,8"
                                    StrokeThickness="0"
                                    VerticalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="20"/>
                                </Border.StrokeShape>
                                <Entry x:Name="MessageEntry"
                                       Placeholder="Type your message..."
                                       PlaceholderColor="#9CA3AF"
                                       TextColor="#2C3E50"
                                       BackgroundColor="Transparent"
                                       VerticalOptions="Center"/>
                            </Border>

                            <Border Grid.Column="2"
                                    BackgroundColor="#059669"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    StrokeThickness="0"
                                    VerticalOptions="Center">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="8"/>
                                </Border.StrokeShape>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnSendMessageTapped"/>
                                </Border.GestureRecognizers>
                                <Label Text="âž¤" 
                                       TextColor="White"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                        </Grid>
                    </Border>

                </Grid>
            </Border>

        </Grid>

        <!-- Compose Overlay -->
        <Grid x:Name="ComposeOverlay"
              Grid.RowSpan="2"
              Grid.ColumnSpan="2"
              BackgroundColor="#80000000"
              IsVisible="False"
              Padding="20"
              RowDefinitions="*"
              ColumnDefinitions="*">
            <Border BackgroundColor="White"
                    StrokeThickness="0"
                    Padding="25"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    WidthRequest="420">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16"/>
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="18">
                    <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                        <Label Text="âž•"
                               FontSize="24"/>
                        <VerticalStackLayout>
                            <Label Text="New Message"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="#111827"/>
                            <Label Text="Start a new conversation by selecting a recipient"
                                   FontSize="13"
                                   TextColor="#6B7280"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <VerticalStackLayout Spacing="6">
                        <Label Text="Recipient Email"
                               FontSize="13"
                               TextColor="#4B5563"/>
                        <Border BackgroundColor="#F3F4F6"
                                StrokeThickness="0"
                                Padding="14,10"
                                StrokeShape="{RoundRectangle CornerRadius=8}">
                            <Entry x:Name="ComposeRecipientEntry"
                                   Placeholder="student@university.edu"
                                   Keyboard="Email"
                                   TextColor="#111827"
                                   PlaceholderColor="#9CA3AF"
                                   BackgroundColor="Transparent"/>
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="6">
                        <Label Text="Message"
                               FontSize="13"
                               TextColor="#4B5563"/>
                        <Border BackgroundColor="#F3F4F6"
                                StrokeThickness="0"
                                Padding="14,10"
                                StrokeShape="{RoundRectangle CornerRadius=12}">
                            <Editor x:Name="ComposeMessageEditor"
                                    Placeholder="Type your message here..."
                                    PlaceholderColor="#9CA3AF"
                                    TextColor="#111827"
                                    AutoSize="TextChanges"
                                    MinimumHeightRequest="100"
                                    BackgroundColor="Transparent"/>
                        </Border>
                    </VerticalStackLayout>

                    <Label x:Name="ComposeErrorLabel"
                           TextColor="#DC2626"
                           FontSize="12"
                           IsVisible="False"/>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <Button Grid.Column="0"
                                Text="Cancel"
                                BackgroundColor="#F3F4F6"
                                TextColor="#374151"
                                CornerRadius="8"
                                Clicked="OnComposeCancelClicked"/>
                        <Button Grid.Column="1"
                                Text="Send Message"
                                BackgroundColor="#059669"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="8"
                                Clicked="OnComposeSendClicked"/>
                    </Grid>
                </VerticalStackLayout>
            </Border>
        </Grid>
    </Grid>
</ContentPage>
